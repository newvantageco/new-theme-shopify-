{% comment %} service-by-price.liquid {% endcomment %}
<style>
    {% if section.settings.bg_section != blank %}
        .customstyle{{ section.id }} .section-header *{
            color:#fff;
        }
    {% endif %}
    .customstyle{{ section.id }} .by-price-item{
        padding: 0px 15px;
        overflow: hidden;
        border-radius: 5px;
    }
    .customstyle{{ section.id }} .by-price-item-content .by-price-top{
        background: #fff;
        padding: 30px;
    }
    .customstyle{{ section.id }} .link-base{
        padding-left: 0;
        margin-top: 40px;
    }
    .customstyle{{ section.id }} .by-price-bottom img{
        width: 100%;
    }
</style>
<div class="customstyle{{ section.id }}"  data-aos="{{ section.settings.animation }}" >
    {%- render 'style-section' -%}
    <div class="{{ section.settings.setwidth }}">
        <div class="section-block">
            {%- render 'section-heading' -%}
            <div class="list-price-slider row" id="collection-list-{{ section.id }}"
            data-rows="{{ section.settings.rows }}"
            data-slidesToShow="{{ section.settings.show }}"
            data-slidestoscroll="{{ section.settings.show }}"
            data-arrows="{{ section.settings.arrows }}"
            data-dots="{{ section.settings.dots }}" 
            data-draggable="{{ section.settings.draggable }}" 
            data-infinite="{{ section.settings.infinite }}" 
            data-section-id="{{ section.id }}" 
            data-slidestoshow-mobile="1"
            data-section-type="slickCarousels"
            >
            {%- for block in section.blocks -%}
                <div class="by-price-item" id="block-{{ block.id }}">
                    <div class="by-price-item-content">
                        <div class="by-price-top">
                            {% if block.settings.title != blank %}
                                <h4 class="mb-2 text-capitalize" style="color:{{ block.settings.color_title }}">{{ block.settings.title }}</h4>
                            {% endif %}
                            {% if block.settings.des != blank %}
                                <div style="color:{{ block.settings.color_des }}">{{ block.settings.des }}</div>
                            {% endif %}
                            {% if block.settings.link_text != blank %}
                                <a href="{{ block.settings.link }}" class="btn link-base" style="color:{{ block.settings.color_link }}">{{ block.settings.link_text }}</a>
                            {% endif %}
                        </div>
                        {% if block.settings.image != blank %}
                            <div class="by-price-bottom">
                                <img src="{{ block.settings.image | image_url: width: 1920 }}" alt="">
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</div>

