{% comment %}
  Enhanced Optical Product Template
  Features: Virtual try-on, prescription builder, ILS integration, advanced product visualization
  Inspired by: Warby Parker, Ray-Ban product pages
{% endcomment %}

{%- liquid
  assign current_variant = product.selected_or_first_available_variant
  assign featured_image = current_variant.featured_image | default: product.featured_image
  assign product_images = product.images
-%}

<style>
  .nvc-product-optical {
    --product-primary: {{ section.settings.primary_color }};
    --product-text: {{ section.settings.text_color }};
    --product-bg: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding }}px 0;
    background: var(--product-bg);
  }

  .nvc-product-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 4rem;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Product Gallery */
  .nvc-product-gallery {
    position: sticky;
    top: 120px;
    height: fit-content;
  }

  .nvc-main-image {
    position: relative;
    aspect-ratio: 4/3;
    background: #f8f8f8;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1rem;
    cursor: zoom-in;
  }

  .nvc-main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .nvc-main-image:hover img {
    transform: scale(1.05);
  }

  .nvc-gallery-thumbnails {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 0.75rem;
  }

  .nvc-thumbnail {
    aspect-ratio: 1;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    border: 2px solid transparent;
    transition: all 0.2s ease;
  }

  .nvc-thumbnail:hover,
  .nvc-thumbnail.active {
    border-color: var(--product-primary);
    transform: translateY(-2px);
  }

  .nvc-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Product Info */
  .nvc-product-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .nvc-product-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--product-primary);
    color: white;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 20px;
    width: fit-content;
  }

  .nvc-product-title {
    font-size: clamp(32px, 4vw, 48px);
    font-weight: 600;
    color: var(--product-text);
    line-height: 1.2;
    margin: 0;
  }

  .nvc-product-price {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    font-size: 32px;
    font-weight: 700;
    color: var(--product-text);
  }

  .nvc-product-price .compare-at {
    font-size: 24px;
    text-decoration: line-through;
    opacity: 0.5;
    font-weight: 400;
  }

  .nvc-product-description {
    font-size: 16px;
    line-height: 1.6;
    color: var(--product-text);
    opacity: 0.8;
  }

  /* Optical Specifications */
  .nvc-optical-specs {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(0, 0, 0, 0.02);
    border-radius: 12px;
  }

  .nvc-spec-item {
    text-align: center;
  }

  .nvc-spec-label {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--product-primary);
    margin-bottom: 0.25rem;
    font-weight: 600;
  }

  .nvc-spec-value {
    font-size: 18px;
    font-weight: 600;
    color: var(--product-text);
  }

  /* Color Swatches */
  .nvc-color-selector {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .nvc-color-label {
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--product-text);
  }

  .nvc-color-swatches {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .nvc-color-swatch {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    cursor: pointer;
    border: 3px solid transparent;
    transition: all 0.2s ease;
    position: relative;
  }

  .nvc-color-swatch:hover,
  .nvc-color-swatch.active {
    border-color: var(--product-primary);
    transform: scale(1.1);
  }

  .nvc-color-swatch::after {
    content: '✓';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 18px;
    font-weight: bold;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .nvc-color-swatch.active::after {
    opacity: 1;
  }

  /* Virtual Try-On Button */
  .nvc-virtual-tryon-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1.25rem 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }

  .nvc-virtual-tryon-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
  }

  .nvc-virtual-tryon-btn svg {
    width: 24px;
    height: 24px;
  }

  /* Add to Cart Button */
  .nvc-add-to-cart {
    width: 100%;
    padding: 1.5rem 2rem;
    background: var(--product-primary);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .nvc-add-to-cart:hover {
    background: color-mix(in srgb, var(--product-primary) 85%, black);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .nvc-add-to-cart:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Prescription Options */
  .nvc-prescription-panel {
    padding: 1.5rem;
    background: #f8f8f8;
    border-radius: 12px;
    border: 2px solid var(--product-primary);
  }

  .nvc-prescription-toggle {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
  }

  .nvc-prescription-toggle input[type="checkbox"] {
    width: 24px;
    height: 24px;
    cursor: pointer;
  }

  /* Trust Signals */
  .nvc-trust-signals {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .nvc-trust-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 14px;
    color: var(--product-text);
  }

  .nvc-trust-item svg {
    width: 20px;
    height: 20px;
    color: var(--product-primary);
    flex-shrink: 0;
  }

  /* ILS Integration */
  .nvc-ils-enhanced {
    padding: 1.5rem;
    background: linear-gradient(135deg, rgba(167, 97, 17, 0.1) 0%, rgba(167, 97, 17, 0.05) 100%);
    border-radius: 12px;
    border-left: 4px solid var(--product-primary);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .nvc-product-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .nvc-product-gallery {
      position: relative;
      top: 0;
    }

    .nvc-optical-specs {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .nvc-product-grid {
      padding: 0 1rem;
    }

    .nvc-optical-specs {
      grid-template-columns: 1fr;
    }

    .nvc-trust-signals {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="nvc-product-optical" itemscope itemtype="http://schema.org/Product">
  <div class="nvc-product-grid">
    <!-- Product Gallery -->
    <div class="nvc-product-gallery">
      <div class="nvc-main-image" id="mainImage">
        <img
          src="{{ featured_image | image_url: width: 1200 }}"
          alt="{{ product.title }}"
          itemprop="image"
        >
      </div>
      <div class="nvc-gallery-thumbnails">
        {%- for image in product_images -%}
          <div class="nvc-thumbnail{% if forloop.first %} active{% endif %}" data-image="{{ image | image_url: width: 1200 }}">
            <img src="{{ image | image_url: width: 200 }}" alt="{{ product.title }}">
          </div>
        {%- endfor -%}
      </div>
    </div>

    <!-- Product Info -->
    <div class="nvc-product-info">
      {%- if product.tags contains 'new' -%}
        <span class="nvc-product-badge">New Arrival</span>
      {%- endif -%}

      <h1 class="nvc-product-title" itemprop="name">{{ product.title }}</h1>

      <div class="nvc-product-price" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
        <span itemprop="price" content="{{ current_variant.price | money_without_currency }}">
          {{ current_variant.price | money }}
        </span>
        {%- if current_variant.compare_at_price > current_variant.price -%}
          <span class="compare-at">{{ current_variant.compare_at_price | money }}</span>
        {%- endif -%}
        <meta itemprop="priceCurrency" content="{{ cart.currency.iso_code }}">
      </div>

      <div class="nvc-product-description" itemprop="description">
        {{ product.description | truncate: 200 }}
      </div>

      <!-- Optical Specifications -->
      {%- if product.metafields.optical -%}
      <div class="nvc-optical-specs">
        {%- if product.metafields.optical.lens_width -%}
        <div class="nvc-spec-item">
          <div class="nvc-spec-label">Lens Width</div>
          <div class="nvc-spec-value">{{ product.metafields.optical.lens_width }}mm</div>
        </div>
        {%- endif -%}
        {%- if product.metafields.optical.bridge_width -%}
        <div class="nvc-spec-item">
          <div class="nvc-spec-label">Bridge</div>
          <div class="nvc-spec-value">{{ product.metafields.optical.bridge_width }}mm</div>
        </div>
        {%- endif -%}
        {%- if product.metafields.optical.temple_length -%}
        <div class="nvc-spec-item">
          <div class="nvc-spec-label">Temple</div>
          <div class="nvc-spec-value">{{ product.metafields.optical.temple_length }}mm</div>
        </div>
        {%- endif -%}
      </div>
      {%- endif -%}

      <!-- Color Selection -->
      {%- if product.variants.size > 1 -%}
      <div class="nvc-color-selector">
        <div class="nvc-color-label">Select Color</div>
        <div class="nvc-color-swatches">
          {%- for variant in product.variants -%}
            <div
              class="nvc-color-swatch{% if variant == current_variant %} active{% endif %}"
              data-variant-id="{{ variant.id }}"
              style="background: {{ variant.metafields.color.hex | default: '#cccccc' }};"
              title="{{ variant.title }}"
            ></div>
          {%- endfor -%}
        </div>
      </div>
      {%- endif -%}

      <!-- Virtual Try-On -->
      {%- if section.settings.enable_virtual_tryon -%}
      <button type="button" class="nvc-virtual-tryon-btn" onclick="openVirtualTryOn()">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
          <circle cx="12" cy="12" r="3"></circle>
        </svg>
        Try On Virtually
      </button>
      {%- endif -%}

      <!-- Prescription Options -->
      {%- if product.metafields.optical.prescription_compatible == 'true' -%}
      <div class="nvc-prescription-panel">
        <label class="nvc-prescription-toggle">
          <input type="checkbox" id="addPrescription" name="add_prescription">
          <span>Add Prescription Lenses (+£0.00)</span>
        </label>
      </div>
      {%- endif -%}

      <!-- Enhanced ILS Integration -->
      <div class="nvc-ils-enhanced">
        {%- render 'ils-integration', product: product -%}
      </div>

      <!-- Add to Cart -->
      <form action="/cart/add" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="{{ current_variant.id }}">
        <button type="submit" class="nvc-add-to-cart" {% unless current_variant.available %}disabled{% endunless %}>
          {% if current_variant.available %}Add to Cart{% else %}Out of Stock{% endif %}
        </button>
      </form>

      <!-- Trust Signals -->
      <div class="nvc-trust-signals">
        <div class="nvc-trust-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
          </svg>
          <span>Free UK Shipping</span>
        </div>
        <div class="nvc-trust-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          <span>60-Day Returns</span>
        </div>
        <div class="nvc-trust-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
          <span>2-Year Warranty</span>
        </div>
        <div class="nvc-trust-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
          <span>Quality Guarantee</span>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Gallery functionality
  document.addEventListener('DOMContentLoaded', function() {
    const thumbnails = document.querySelectorAll('.nvc-thumbnail');
    const mainImage = document.querySelector('#mainImage img');

    thumbnails.forEach(thumb => {
      thumb.addEventListener('click', function() {
        thumbnails.forEach(t => t.classList.remove('active'));
        this.classList.add('active');
        mainImage.src = this.dataset.image;
      });
    });

    // Color swatch variant selection
    const swatches = document.querySelectorAll('.nvc-color-swatch');
    const variantInput = document.querySelector('input[name="id"]');

    swatches.forEach(swatch => {
      swatch.addEventListener('click', function() {
        swatches.forEach(s => s.classList.remove('active'));
        this.classList.add('active');
        if (variantInput) {
          variantInput.value = this.dataset.variantId;
        }
      });
    });
  });

  // Virtual Try-On
  function openVirtualTryOn() {
    // Trigger ILS virtual try-on event
    window.dispatchEvent(new CustomEvent('ils:virtual-tryon', {
      detail: {
        product: {{ product.id }},
        variant: {{ current_variant.id }}
      }
    }));
    alert('Virtual Try-On feature will integrate with your ILS provider');
  }
</script>

{% schema %}
{
  "name": "Product - Optical Enhanced",
  "settings": [
    {
      "type": "header",
      "content": "Design"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary color",
      "default": "#a76111"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Section padding",
      "default": 60
    },
    {
      "type": "header",
      "content": "Features"
    },
    {
      "type": "checkbox",
      "id": "enable_virtual_tryon",
      "label": "Enable virtual try-on",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_ils_integration",
      "label": "Enable ILS integration",
      "default": true,
      "info": "Shows real-time inventory and store availability"
    }
  ],
  "presets": [
    {
      "name": "Product - Optical Enhanced"
    }
  ]
}
{% endschema %}
