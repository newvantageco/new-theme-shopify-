<!-- newsletter.liquid -->
{%- liquid
  assign bg_image = section.settings.image_bg
  assign newletter_color = section.settings.newletter_color
-%}
<style>
  .customstyle{{ section.id }}{
    {%- if newletter_color != 'rgba(0,0,0,0)' -%}
      --g-color-heading : {{ newletter_color }};
      --color-body-text : {{ newletter_color }};
      --color-body-text-rgb : {{ newletter_color.red }}, {{ newletter_color.green }}, {{ newletter_color.blue }};
      {%- endif -%}
    position: relative;
    z-index: {{ section.settings.zindex }};
    background-position: {{ section.settings.e_position }} !important;
    background-repeat:{{ section.settings.e_repeat }} !important;
    background-size:{{ section.settings.e_size }} !important;
  }
  .newsletter-section-{{ section.id }}::before{
      content:"";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
        background-color: {{ section.settings.bg_overlay }};
      opacity: {{ section.settings.opacity_bg_overlay }};
  }
  .mail-section .form-group {
    background-color: {{ section.settings.bg_input }};
    border:1px solid {{ section.settings.colorborder }};
    border-radius:var(--g-input-radius) !important;
  }
  .mail-section .form-group input::placeholder{
      color: rgba(var(--color-body-text-rgb),0.6) !important;
  }
  .mail-section .form-group .form-control{
    border:none;
    box-shadow: none;
  }
  .mail-section .form-group .svg-email{
    width: 24px;
    height: 24px;
    fill: var(--g-color-heading);
  }
  .mail-section .form-group .btn{
    align-self: stretch;
  }
  .mail-section .form-group .btn .svg-submit{
    width: 24px;
    height: 24px;
    transition: all .3s ease;
    fill: var(--g-color-heading);
  }
  .mail-section .form-group .btn .svg-submit path{
    fill: currentColor;
  }
  .mail-section .form-group .btn:hover .svg-submit{
    color: var(--g-main);
    transform: scale(1.05);
  }
  .customstyle{{ section.id }} .newletter-padding{
      padding: 75px 15px;
  }
  .customstyle{{ section.id }} .newsletter-bg-section{
    border-radius: 5px;
    background-image: url({{ bg_image | image_url: width: 1920 }});
    background-position: {{ section.settings.e_position }} !important;
    background-repeat:{{ section.settings.e_repeat }} !important;
    background-size:{{ section.settings.e_size }} !important;
  }
  @media (min-width:576px) {
    .customstyle{{ section.id }} .newletter-padding{
      padding: 50px;
    } 
  }
</style>

<section class="customstyle{{ section.id }} lazyload newsletter-section-{{ section.id }}" 
  data-sizes="auto"
  data-parent-fit="cover" 
  data-section-id="{{ section.id }}"  
  data-aos="{{ section.settings.animation }}"
  data-section-type="newletter-section"  >
  {%- render 'style-section' -%}
  <div class="{{ section.settings.setwidth }} text-center">
    {%- assign e_left = section.settings.html_left -%}
    <div class="row d-flex {% if section.settings.bgsection != blank %}justify-content-center justify-content-lg-start{% else %}justify-content-center{% endif %} newsletter-bg-section">
      <div class="{% if e_left %} col-lg-8 {% else %} col-lg-6 {% endif %}">
        <div class="{% if section.settings.bg_inner %}bg-white {% endif %} newletter-padding">
          {% comment %}  {% endcomment %}
          <div class="section-header text-{{ section.settings.align-heading }}">
            {% if section.settings.countdown_header != blank %}
              <div class="countdown-header mb-3">
                <div class="js-countdown" data-time="{{ section.settings.countdown_header }}"></div>
              </div>
            {% endif %}
            {%- if section.settings.image_header != blank -%}
            <div class="image-header mb-2" data-aos="{{ section.settings.animation }}" data-aos-duration="500">
             <img src="{{ section.settings.image_header | image_url: width: 1920 }}" width="auto" height="auto" loading="lazy" alt="">
            </div>
            {%- endif -%}
            {%- if section.settings.title_top != blank -%}
              <div class="subtop text-top mb-2" data-aos="{{ section.settings.animation }}" data-aos-duration="300">{{ section.settings.title_top }}</div>
            {%- endif -%}
            {%- if section.settings.title != blank -%}
            <h3 class=" {% if section.settings.des != blank %} mb-3 {% else %} mb-4 {% endif %} " data-aos="{{ section.settings.animation }}" data-aos-duration="500">
              <span>{{ section.settings.title }}</span>
            </h3>
            {%- endif -%}
            
            {%- if section.settings.des != blank -%}
            <div class="font-family-2 des-header txt-body-70 {% if section.settings.button_header_text != blank %} mb-4{% else %} mb-5{% endif %}" data-aos="{{ section.settings.animation }}" data-aos-duration="800">{{ section.settings.des }}</div>
            {%- endif -%}
            {%- if section.settings.button_header_text != blank -%}
            <div class="button-header mb-5">
              <a href="{{ section.settings.button_header_link }}" class="btn btn-theme">{{ section.settings.button_header_text }}</a>
            </div>
            {%- endif -%}
          </div>
          {% comment %}  {% endcomment %}
          {%- if e_left -%}
          <div class="row">
          {%- endif -%}
            {%- if e_left -%}
              <div class="left_newlleters text-left col-lg-6 col-12">
                {{ section.settings.html_left_block }}
              </div>
            {%- endif -%}
            <div class="form-vertical mail-section  {% if e_left %} col-lg-6 col-12  pt-2 {% else %}  {% endif %}">
              {%- form 'customer', id: 'newletter-section' -%}
                {{ form.errors | default_errors }}
                {%- if form.posted_successfully? -%}
                  <p class="form-success">{{ 'general.newsletter_form.confirmation' | t }}</p>
                {%- else -%}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <label for="NewsletterEmail-{{ section.id }}" class="label--hidden">{{ 'general.newsletter_form.newsletter_label' | t }}</label>
                  <div class=" form-group text-center input-group mb-0 align-items-center pl-2 pr-2 py-1">
                    
                    <input class="form-control" type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_placeholder' | t }}" name="contact[email]" id="NewsletterEmail-{{ block.id }}" autocorrect="off" autocapitalize="off">
                    <button type="submit" class="btn" name="commit">
                      <span class="icon__fallback-text" >{{ 'general.newsletter_form.submit' | t }}</span>
                      {%- render 'icon-email' -%}
                    </button>
                  </div>
                {%- endif -%}
              {%- endform -%}
            </div>
            {%- if e_left -%}
          </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .bg-white {
    background-color: hsl(0deg 0% 100% / 70%) !important;
    margin: 20px;
}
</style>
