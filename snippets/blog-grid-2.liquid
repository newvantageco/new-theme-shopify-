<!-- blog-grid-2.liquid -->

<div class="blog__item blog__item--2 text-center">
  {%- if article.image -%}
  <div class="content-block__image mb-3">
    <a href="{{ article.url }}">
      <noscript>
        {{ article | img_url: '1024x1024' | img_tag: article.title | escape }}
      </noscript>
      <div class="article__photo-container">
        <div class="article__photo-wrapper" style="padding-top:{{ 1 | divided_by: article.image.aspect_ratio | times: 100}}%;">
          {%- assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <img class="lazyload"
               data-src="{{ img_url }}"
               data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
               data-aspectratio="{{ article.image.aspect_ratio }}"
               data-sizes="auto"
               alt="{{ article.title | escape }}">
        </div>
      </div>
    </a>
  </div>
  {%- endif -%}
  <div class="blog__content">
   
    {%- if enable_tag -%}
    <div class="d-inline-flex align-items-center">
      {%- if article.tags.size > 0 -%}
        <div class="blog_tag mb-2">
          {%- for tag in article.tags -%}
          <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="blog-tag">{{ tag }}</a>{% unless forloop.last %}, {% endunless %}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
    {%- endif -%}

    {%- if enable_date -%}
      <div class="blog__meta font-family-2 mb-2">
        {% comment %}{%- if article.tags.size > 0 -%}
        {%- for tag in article.tags -%}
        <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="link-body-color">{{ tag }}</a>{% if forloop.last %} - {% else %}, {% endif %}
        {%- endfor -%}
        {%- endif -%}{% endcomment %}
        {{ article.published_at | time_tag: format: 'month_day_year' }}
      </div>
    {%- endif -%}
    
  <h6 class="blog__title-link mb-2"><a href="{{ article.url }}">{{ article.title }}</a></h6>
  
    {%- if enable_author -%}
      <div class="date-name-box">
        <div class="blog-author">
          {{ article.author }}
        </div>
      </div>
    {%- endif -%}

  {%- if enable_short -%}
  <div class="rte rte--indented-images {% if template contains 'index' %} mb-4 {% else %} mb-5 {% endif %}">
    {%- if article.excerpt.size > 0 -%}
    {{ article.excerpt }}
    {%- else -%}
      {%- if template contains 'index' -%}
      <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
      {%- else -%}
      <p>{{ article.content | strip_html | truncatewords: 20 }}</p>
      {%- endif -%}
    {%- endif -%}
  </div>
  {%- endif -%}
  {%- if enable_btn_blog -%}
    <div class="blog-button">
      <a class="{% if enable_btn_line %} link-base {% else %} btn-underlin {% endif %} gradient-theme" href="{{ article.url }}">{{ 'blogs.article.read_more' | t }}</a>  
    </div>
  {%- endif -%}
</div>
</div>