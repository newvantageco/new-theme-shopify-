<script>
  // Virtual Try-On & Prescription Modal - Accessible Event Handlers
  (function() {
    'use strict';

    let videoStream = null;

    // Virtual Try-On Functions
    function openVirtualTryon(product) {
      const modal = document.getElementById('nvcVirtualTryonModal');
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';

      // Update product info
      if (product) {
        document.getElementById('tryonProductImage').src = product.image;
        document.getElementById('tryonProductTitle').textContent = product.title;
        document.getElementById('tryonProductPrice').textContent = product.price;
      }
    }

    function closeVirtualTryon() {
      const modal = document.getElementById('nvcVirtualTryonModal');
      modal.classList.remove('active');
      document.body.style.overflow = '';

      // Stop camera
      if (videoStream) {
        videoStream.getTracks().forEach(track => track.stop());
        videoStream = null;
      }
    }

    async function startCamera() {
      try {
        videoStream = await navigator.mediaDevices.getUserMedia({
          video: { facingMode: 'user' }
        });
        const video = document.getElementById('tryonVideo');
        video.srcObject = videoStream;
        video.play();

        document.querySelector('.nvc-tryon-placeholder').style.display = 'none';
        video.style.display = 'block';
        document.querySelector('.nvc-camera-controls').style.display = 'flex';
      } catch (err) {
        alert('Camera access denied or not available');
      }
    }

    function switchCamera() {
      // Switch between front and back camera (if available)
      console.log('Switch camera requested');
    }

    function capturePhoto() {
      const video = document.getElementById('tryonVideo');
      const canvas = document.getElementById('tryonCanvas');
      canvas.width = video.videoWidth;
      canvas.height = video.videoHeight;
      canvas.getContext('2d').drawImage(video, 0, 0);
    }

    function downloadPhoto() {
      const canvas = document.getElementById('tryonCanvas');
      const link = document.createElement('a');
      link.download = 'virtual-tryon.jpg';
      link.href = canvas.toDataURL();
      link.click();
    }

    function addToCartFromTryon() {
      alert('Added to cart!');
      closeVirtualTryon();
    }

    // Prescription Modal Functions
    function openPrescriptionModal() {
      const modal = document.getElementById('nvcPrescriptionModal');
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closePrescriptionModal() {
      const modal = document.getElementById('nvcPrescriptionModal');
      modal.classList.remove('active');
      document.body.style.overflow = '';
    }

    function switchPrescriptionTab(e) {
      const clickedTab = e.currentTarget;
      const tabName = clickedTab.dataset.tab;

      // Update tab states
      document.querySelectorAll('.nvc-prescription-tab').forEach(tab => {
        tab.classList.remove('active');
        tab.setAttribute('aria-selected', 'false');
      });

      clickedTab.classList.add('active');
      clickedTab.setAttribute('aria-selected', 'true');

      // Show/hide panels
      if (tabName === 'manual') {
        document.getElementById('manualPrescription').style.display = 'block';
        document.getElementById('uploadPrescription').style.display = 'none';
      } else {
        document.getElementById('manualPrescription').style.display = 'none';
        document.getElementById('uploadPrescription').style.display = 'block';
      }
    }

    function savePrescription() {
      alert('Prescription saved!');
      closePrescriptionModal();
    }

    // Initialize event listeners when DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
      // Virtual Try-On button handlers
      document.querySelectorAll('[data-close-tryon]').forEach(btn => {
        btn.addEventListener('click', closeVirtualTryon);
      });

      document.querySelectorAll('[data-start-camera]').forEach(btn => {
        btn.addEventListener('click', startCamera);
      });

      document.querySelectorAll('[data-switch-camera]').forEach(btn => {
        btn.addEventListener('click', switchCamera);
      });

      document.querySelectorAll('[data-capture-photo]').forEach(btn => {
        btn.addEventListener('click', capturePhoto);
      });

      document.querySelectorAll('[data-download-photo]').forEach(btn => {
        btn.addEventListener('click', downloadPhoto);
      });

      document.querySelectorAll('[data-add-to-cart]').forEach(btn => {
        btn.addEventListener('click', addToCartFromTryon);
      });

      // Prescription Modal button handlers
      document.querySelectorAll('[data-close-prescription]').forEach(btn => {
        btn.addEventListener('click', closePrescriptionModal);
      });

      document.querySelectorAll('[data-save-prescription]').forEach(btn => {
        btn.addEventListener('click', savePrescription);
      });

      // Tab switching
      document.querySelectorAll('.nvc-prescription-tab').forEach(tab => {
        tab.addEventListener('click', switchPrescriptionTab);
      });

      // Close modals on overlay click
      document.querySelectorAll('.nvc-modal-overlay').forEach(overlay => {
        overlay.addEventListener('click', function(e) {
          if (e.target === this) {
            closeVirtualTryon();
            closePrescriptionModal();
          }
        });
      });

      // Keyboard accessibility - ESC to close
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          closeVirtualTryon();
          closePrescriptionModal();
        }
      });

      // Upload file trigger
      const uploadArea = document.querySelector('.nvc-prescription-upload');
      if (uploadArea) {
        uploadArea.addEventListener('click', function() {
          document.getElementById('prescriptionFile').click();
        });
      }

      // ILS event listeners
      window.addEventListener('ils:virtual-tryon', function(e) {
        openVirtualTryon(e.detail);
      });

      window.addEventListener('ils:prescription-form', function() {
        openPrescriptionModal();
      });
    });

    // Expose functions globally for backwards compatibility
    window.openVirtualTryon = openVirtualTryon;
    window.openPrescriptionModal = openPrescriptionModal;
  })();
</script>
