<style>
  /* Modal Overlay */
  .nvc-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(8px);
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .nvc-modal-overlay.active {
    display: flex;
    opacity: 1;
  }

  /* Modal Container */
  .nvc-modal {
    background: white;
    border-radius: 24px;
    max-width: 1200px;
    width: 100%;
    max-height: 90vh;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    transform: scale(0.95);
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .nvc-modal-overlay.active .nvc-modal {
    transform: scale(1);
  }

  /* Modal Header */
  .nvc-modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2rem 2.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .nvc-modal-title {
    font-size: 24px;
    font-weight: 700;
    color: #1a1a1a;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .nvc-modal-close {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    background: #f5f5f5;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .nvc-modal-close:hover {
    background: #e5e5e5;
    transform: rotate(90deg);
  }

  /* Modal Body */
  .nvc-modal-body {
    padding: 2.5rem;
    max-height: calc(90vh - 160px);
    overflow-y: auto;
  }

  /* Virtual Try-On Interface */
  .nvc-tryon-interface {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 2rem;
  }

  .nvc-tryon-camera {
    position: relative;
    aspect-ratio: 4/3;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 16px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nvc-tryon-camera video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .nvc-tryon-placeholder {
    text-align: center;
    color: white;
    padding: 2rem;
  }

  .nvc-tryon-placeholder svg {
    width: 64px;
    height: 64px;
    margin-bottom: 1rem;
    opacity: 0.8;
  }

  .nvc-camera-controls {
    position: absolute;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 1rem;
  }

  .nvc-camera-btn {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    border: none;
    background: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .nvc-camera-btn:hover {
    transform: scale(1.1);
  }

  .nvc-camera-btn.capture {
    width: 72px;
    height: 72px;
    background: #a76111;
  }

  .nvc-camera-btn svg {
    width: 24px;
    height: 24px;
  }

  .nvc-tryon-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .nvc-tryon-product {
    padding: 1.5rem;
    background: #f8f8f8;
    border-radius: 12px;
  }

  .nvc-tryon-product-image {
    width: 100%;
    aspect-ratio: 4/3;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 1rem;
  }

  .nvc-tryon-product-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .nvc-tryon-product-price {
    font-size: 20px;
    font-weight: 700;
    color: #a76111;
  }

  .nvc-tryon-features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .nvc-tryon-feature {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: white;
    border: 2px solid #e5e5e5;
    border-radius: 8px;
    font-size: 14px;
  }

  .nvc-tryon-feature svg {
    width: 20px;
    height: 20px;
    color: #a76111;
    flex-shrink: 0;
  }

  /* Prescription Builder */
  .nvc-prescription-builder {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .nvc-prescription-tabs {
    display: flex;
    gap: 1rem;
    border-bottom: 2px solid #e5e5e5;
  }

  .nvc-prescription-tab {
    padding: 1rem 1.5rem;
    border: none;
    background: transparent;
    font-size: 16px;
    font-weight: 600;
    color: #666;
    cursor: pointer;
    border-bottom: 3px solid transparent;
    transition: all 0.2s ease;
  }

  .nvc-prescription-tab.active {
    color: #a76111;
    border-bottom-color: #a76111;
  }

  .nvc-prescription-form {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .nvc-form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .nvc-form-group.full-width {
    grid-column: 1 / -1;
  }

  .nvc-form-label {
    font-size: 14px;
    font-weight: 600;
    color: #333;
  }

  .nvc-form-input,
  .nvc-form-select {
    padding: 0.875rem 1rem;
    border: 2px solid #e5e5e5;
    border-radius: 8px;
    font-size: 16px;
    transition: all 0.2s ease;
  }

  .nvc-form-input:focus,
  .nvc-form-select:focus {
    outline: none;
    border-color: #a76111;
    box-shadow: 0 0 0 3px rgba(167, 97, 17, 0.1);
  }

  .nvc-prescription-table {
    width: 100%;
    border-collapse: collapse;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .nvc-prescription-table th,
  .nvc-prescription-table td {
    padding: 1rem;
    text-align: center;
    border: 1px solid #e5e5e5;
  }

  .nvc-prescription-table th {
    background: #f8f8f8;
    font-weight: 600;
    color: #333;
  }

  .nvc-prescription-table input {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
    text-align: center;
  }

  .nvc-prescription-upload {
    padding: 2rem;
    border: 2px dashed #a76111;
    border-radius: 12px;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .nvc-prescription-upload:hover {
    background: rgba(167, 97, 17, 0.05);
    border-color: #8b5209;
  }

  .nvc-prescription-upload svg {
    width: 48px;
    height: 48px;
    color: #a76111;
    margin-bottom: 1rem;
  }

  /* Modal Footer */
  .nvc-modal-footer {
    padding: 2rem 2.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
  }

  .nvc-modal-btn {
    padding: 1rem 2rem;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
  }

  .nvc-modal-btn-secondary {
    background: #f5f5f5;
    color: #333;
  }

  .nvc-modal-btn-secondary:hover {
    background: #e5e5e5;
  }

  .nvc-modal-btn-primary {
    background: #a76111;
    color: white;
  }

  .nvc-modal-btn-primary:hover {
    background: #8b5209;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(167, 97, 17, 0.3);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .nvc-tryon-interface {
      grid-template-columns: 1fr;
    }

    .nvc-prescription-form {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .nvc-modal-overlay {
      padding: 0;
    }

    .nvc-modal {
      border-radius: 0;
      max-height: 100vh;
    }

    .nvc-modal-header,
    .nvc-modal-body,
    .nvc-modal-footer {
      padding: 1.5rem;
    }

    .nvc-modal-footer {
      flex-direction: column;
    }

    .nvc-modal-btn {
      width: 100%;
    }
  }
</style>

