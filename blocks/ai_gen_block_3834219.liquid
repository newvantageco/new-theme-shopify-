{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-showcase-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 0;
    position: relative;
    overflow: hidden;
    {% if block.settings.full_width %}
      width: 100vw;
      margin-left: calc(-50vw + 50%);
    {% endif %}
  }

  .ai-product-showcase-container-{{ ai_gen_id }} {
    {% if block.settings.full_width %}
      max-width: 100%;
      width: 100%;
      padding: 0;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0;
      align-items: center;
      min-height: {{ block.settings.section_height }}px;
    {% else %}
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: center;
      min-height: 600px;
    {% endif %}
  }

  .ai-product-showcase-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    z-index: 2;
    position: relative;
    {% if block.settings.full_width %}
      padding: 60px 80px 60px 120px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      height: 100%;
    {% else %}
      padding: 0;
    {% endif %}
  }

  .ai-product-showcase-preheadline-{{ ai_gen_id }} {
    font-size: {{ block.settings.preheadline_size }}px;
    font-weight: 600;
    letter-spacing: {{ block.settings.preheadline_spacing }}px;
    text-transform: uppercase;
    color: {{ block.settings.preheadline_color }};
    margin-bottom: 20px;
    display: block;
  }

  .ai-product-showcase-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: {{ block.settings.headline_weight }};
    line-height: 1.2;
    color: {{ block.settings.headline_color }};
    margin-bottom: 30px;
    {% if block.settings.full_width %}
      max-width: 500px;
    {% endif %}
  }

  .ai-product-showcase-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    color: {{ block.settings.description_color }};
    margin-bottom: 40px;
    {% if block.settings.full_width %}
      max-width: 450px;
    {% else %}
      max-width: 400px;
    {% endif %}
  }

  .ai-product-showcase-button-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    padding: 16px 32px;
    text-decoration: none;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 0;
    min-height: 44px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-showcase-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-product-showcase-image-container-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
    {% if block.settings.full_width %}
      height: {{ block.settings.section_height }}px;
      overflow: hidden;
    {% endif %}
  }

  .ai-product-showcase-image-{{ ai_gen_id }} {
    width: 100%;
    {% if block.settings.full_width %}
      height: 100%;
      object-fit: cover;
      object-position: center;
    {% else %}
      height: auto;
    {% endif %}
    display: block;
  }

  .ai-product-showcase-placeholder-{{ ai_gen_id }} {
    width: 100%;
    {% if block.settings.full_width %}
      height: {{ block.settings.section_height }}px;
    {% else %}
      height: 500px;
    {% endif %}
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-showcase-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-product-showcase-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-product-showcase-annotation-{{ ai_gen_id }} {
    position: absolute;
    z-index: 3;
  }

  .ai-product-showcase-annotation-line-{{ ai_gen_id }} {
    position: absolute;
    height: 1px;
    background: linear-gradient(90deg, {{ block.settings.line_color }}, transparent);
    transform-origin: left center;
  }

  .ai-product-showcase-annotation-dot-{{ ai_gen_id }} {
    position: absolute;
    width: 6px;
    height: 6px;
    background-color: {{ block.settings.line_color }};
    border-radius: 50%;
    right: -3px;
    top: -3px;
  }

  .ai-product-showcase-annotation-text-{{ ai_gen_id }} {
    position: absolute;
    font-size: {{ block.settings.annotation_font_size }}px;
    color: {{ block.settings.annotation_text_color }};
    font-weight: 500;
    white-space: nowrap;
    background-color: {{ block.settings.background_color }};
    padding: 8px 12px;
    border-radius: 4px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .ai-product-showcase-annotation-1-{{ ai_gen_id }} {
    top: {{ block.settings.annotation_1_y }}%;
    left: {{ block.settings.annotation_1_x }}%;
  }

  .ai-product-showcase-annotation-1-{{ ai_gen_id }} .ai-product-showcase-annotation-line-{{ ai_gen_id }} {
    width: {{ block.settings.annotation_1_line_length }}px;
    transform: rotate({{ block.settings.annotation_1_line_angle }}deg);
  }

  .ai-product-showcase-annotation-1-{{ ai_gen_id }} .ai-product-showcase-annotation-text-{{ ai_gen_id }} {
    left: {{ block.settings.annotation_1_line_length | plus: 15 }}px;
    top: -20px;
  }

  .ai-product-showcase-annotation-2-{{ ai_gen_id }} {
    top: {{ block.settings.annotation_2_y }}%;
    left: {{ block.settings.annotation_2_x }}%;
  }

  .ai-product-showcase-annotation-2-{{ ai_gen_id }} .ai-product-showcase-annotation-line-{{ ai_gen_id }} {
    width: {{ block.settings.annotation_2_line_length }}px;
    transform: rotate({{ block.settings.annotation_2_line_angle }}deg);
  }

  .ai-product-showcase-annotation-2-{{ ai_gen_id }} .ai-product-showcase-annotation-text-{{ ai_gen_id }} {
    left: {{ block.settings.annotation_2_line_length | plus: 15 }}px;
    top: -20px;
  }

  .ai-product-showcase-annotation-3-{{ ai_gen_id }} {
    top: {{ block.settings.annotation_3_y }}%;
    left: {{ block.settings.annotation_3_x }}%;
  }

  .ai-product-showcase-annotation-3-{{ ai_gen_id }} .ai-product-showcase-annotation-line-{{ ai_gen_id }} {
    width: {{ block.settings.annotation_3_line_length }}px;
    transform: rotate({{ block.settings.annotation_3_line_angle }}deg);
  }

  .ai-product-showcase-annotation-3-{{ ai_gen_id }} .ai-product-showcase-annotation-text-{{ ai_gen_id }} {
    left: {{ block.settings.annotation_3_line_length | plus: 15 }}px;
    top: -20px;
  }

  @media screen and (max-width: 1200px) {
    .ai-product-showcase-content-{{ ai_gen_id }} {
      {% if block.settings.full_width %}
        padding: 50px 60px 50px 80px;
      {% endif %}
    }

    .ai-product-showcase-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.95 }}px;
    }

    .ai-product-showcase-description-{{ ai_gen_id }} {
      {% if block.settings.full_width %}
        max-width: 400px;
      {% endif %}
    }
  }

  @media screen and (max-width: 1024px) {
    .ai-product-showcase-content-{{ ai_gen_id }} {
      {% if block.settings.full_width %}
        padding: 40px 50px 40px 60px;
      {% endif %}
    }

    .ai-product-showcase-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.9 }}px;
    }

    .ai-product-showcase-description-{{ ai_gen_id }} {
      {% if block.settings.full_width %}
        max-width: 350px;
      {% endif %}
    }

    .ai-product-showcase-annotation-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.annotation_font_size | times: 0.95 }}px;
      padding: 6px 10px;
    }
  }

  @media screen and (max-width: 768px) {
    .ai-product-showcase-{{ ai_gen_id }} {
      {% if block.settings.full_width %}
        width: 100%;
        margin-left: 0;
      {% endif %}
      padding: {{ block.settings.section_padding | times: 0.7 }}px 0;
    }

    .ai-product-showcase-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 0;
      min-height: auto;
    }

    .ai-product-showcase-content-{{ ai_gen_id }} {
      padding: 40px 20px;
      text-align: center;
      order: 2;
    }

    .ai-product-showcase-image-container-{{ ai_gen_id }} {
      height: 300px;
      order: 1;
    }

    .ai-product-showcase-placeholder-{{ ai_gen_id }} {
      height: 300px;
    }

    .ai-product-showcase-preheadline-{{ ai_gen_id }} {
      font-size: {{ block.settings.preheadline_size | times: 0.9 }}px;
      margin-bottom: 15px;
    }

    .ai-product-showcase-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.7 }}px;
      max-width: 100%;
      margin-bottom: 20px;
    }

    .ai-product-showcase-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.95 }}px;
      max-width: 100%;
      margin-bottom: 30px;
    }

    .ai-product-showcase-button-{{ ai_gen_id }} {
      padding: 14px 28px;
      font-size: {{ block.settings.button_font_size | times: 0.95 }}px;
      width: auto;
      min-width: 200px;
    }

    .ai-product-showcase-annotation-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.annotation_font_size | times: 0.85 }}px;
      padding: 4px 8px;
      white-space: normal;
      max-width: 120px;
      text-align: center;
      line-height: 1.3;
    }

    .ai-product-showcase-annotation-line-{{ ai_gen_id }} {
      display: none;
    }

    .ai-product-showcase-annotation-dot-{{ ai_gen_id }} {
      width: 8px;
      height: 8px;
      right: -4px;
      top: -4px;
    }

    .ai-product-showcase-annotation-1-{{ ai_gen_id }} .ai-product-showcase-annotation-text-{{ ai_gen_id }} {
      left: -60px;
      top: -35px;
    }

    .ai-product-showcase-annotation-2-{{ ai_gen_id }} .ai-product-showcase-annotation-text-{{ ai_gen_id }} {
      left: -60px;
      top: -35px;
    }

    .ai-product-showcase-annotation-3-{{ ai_gen_id }} .ai-product-showcase-annotation-text-{{ ai_gen_id }} {
      left: -60px;
      top: -35px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-product-showcase-content-{{ ai_gen_id }} {
      padding: 30px 15px;
    }

    .ai-product-showcase-image-container-{{ ai_gen_id }} {
      height: 250px;
    }

    .ai-product-showcase-placeholder-{{ ai_gen_id }} {
      height: 250px;
    }

    .ai-product-showcase-preheadline-{{ ai_gen_id }} {
      font-size: {{ block.settings.preheadline_size | times: 0.8 }}px;
      letter-spacing: {{ block.settings.preheadline_spacing | times: 0.8 }}px;
    }

    .ai-product-showcase-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.6 }}px;
      line-height: 1.3;
    }

    .ai-product-showcase-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
      line-height: 1.5;
    }

    .ai-product-showcase-button-{{ ai_gen_id }} {
      padding: 12px 24px;
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
      min-width: 180px;
      letter-spacing: 0.5px;
    }

    .ai-product-showcase-annotation-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.annotation_font_size | times: 0.75 }}px;
      padding: 3px 6px;
      max-width: 100px;
    }
  }

  @media screen and (max-width: 360px) {
    .ai-product-showcase-content-{{ ai_gen_id }} {
      padding: 25px 10px;
    }

    .ai-product-showcase-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.55 }}px;
    }

    .ai-product-showcase-button-{{ ai_gen_id }} {
      min-width: 160px;
      padding: 10px 20px;
    }

    .ai-product-showcase-annotation-text-{{ ai_gen_id }} {
      max-width: 80px;
      font-size: {{ block.settings.annotation_font_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-product-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-showcase-container-{{ ai_gen_id }}">
    <div class="ai-product-showcase-content-{{ ai_gen_id }}">
      {% if block.settings.preheadline != blank %}
        <span class="ai-product-showcase-preheadline-{{ ai_gen_id }}">
          {{ block.settings.preheadline }}
        </span>
      {% endif %}

      {% if block.settings.headline != blank %}
        <h2 class="ai-product-showcase-headline-{{ ai_gen_id }}">
          {{ block.settings.headline }}
        </h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-product-showcase-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-product-showcase-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="ai-product-showcase-image-container-{{ ai_gen_id }}">
      {% if block.settings.product_image %}
        <img
          src="{{ block.settings.product_image | image_url: width: 1200 }}"
          alt="{{ block.settings.product_image.alt | escape }}"
          class="ai-product-showcase-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.product_image.width }}"
          height="{{ block.settings.product_image.height }}"
        >
      {% else %}
        <div class="ai-product-showcase-placeholder-{{ ai_gen_id }}">
          {{ 'product-apparel-1' | placeholder_svg_tag }}
          <div class="ai-product-showcase-empty-state-{{ ai_gen_id }}">
            Add a product image to showcase
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_annotations %}
        {% if block.settings.annotation_1_text != blank %}
          <div class="ai-product-showcase-annotation-{{ ai_gen_id }} ai-product-showcase-annotation-1-{{ ai_gen_id }}">
            <div class="ai-product-showcase-annotation-line-{{ ai_gen_id }}">
              <div class="ai-product-showcase-annotation-dot-{{ ai_gen_id }}"></div>
            </div>
            <div class="ai-product-showcase-annotation-text-{{ ai_gen_id }}">
              {{ block.settings.annotation_1_text }}
            </div>
          </div>
        {% endif %}

        {% if block.settings.annotation_2_text != blank %}
          <div class="ai-product-showcase-annotation-{{ ai_gen_id }} ai-product-showcase-annotation-2-{{ ai_gen_id }}">
            <div class="ai-product-showcase-annotation-line-{{ ai_gen_id }}">
              <div class="ai-product-showcase-annotation-dot-{{ ai_gen_id }}"></div>
            </div>
            <div class="ai-product-showcase-annotation-text-{{ ai_gen_id }}">
              {{ block.settings.annotation_2_text }}
            </div>
          </div>
        {% endif %}

        {% if block.settings.annotation_3_text != blank %}
          <div class="ai-product-showcase-annotation-{{ ai_gen_id }} ai-product-showcase-annotation-3-{{ ai_gen_id }}">
            <div class="ai-product-showcase-annotation-line-{{ ai_gen_id }}">
              <div class="ai-product-showcase-annotation-dot-{{ ai_gen_id }}"></div>
            </div>
            <div class="ai-product-showcase-annotation-text-{{ ai_gen_id }}">
              {{ block.settings.annotation_3_text }}
            </div>
          </div>
        {% endif %}
      {% endif %}
    </div>
  </div>
</div>

