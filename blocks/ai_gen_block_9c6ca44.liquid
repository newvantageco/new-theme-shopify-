<script>
  (function() {
    class PremiumProductShowcase{{ai_gen_id}} extends HTMLElement {
      constructor() {
        super();
        this.carousel = this.querySelector('.ai-premium-showcase-carousel-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-premium-showcase-nav-btn-{{ ai_gen_id }}.prev');
        this.nextBtn = this.querySelector('.ai-premium-showcase-nav-btn-{{ ai_gen_id }}.next');
        this.tabs = this.querySelectorAll('.ai-premium-showcase-tab-{{ ai_gen_id }}');
      }

      connectedCallback() {
        this.setupNavigation();
        this.setupTabs();
        this.setupSwatches();
      }

      setupNavigation() {
        if (!this.carousel || !this.prevBtn || !this.nextBtn) return;

        const getCardWidth = () => {
          const card = this.carousel.querySelector('.ai-premium-showcase-product-card-{{ ai_gen_id }}');
          if (!card) return 0;
          const cardStyle = window.getComputedStyle(card);
          const cardWidth = card.offsetWidth;
          const gap = parseInt(cardStyle.marginRight) || {{ block.settings.product_gap }};
          return cardWidth + gap;
        };

        this.prevBtn.addEventListener('click', () => {
          const scrollAmount = getCardWidth() * 4;
          this.carousel.scrollBy({
            left: -scrollAmount,
            behavior: 'smooth'
          });
        });

        this.nextBtn.addEventListener('click', () => {
          const scrollAmount = getCardWidth() * 4;
          this.carousel.scrollBy({
            left: scrollAmount,
            behavior: 'smooth'
          });
        });
      }

      setupTabs() {
        this.tabs.forEach(tab => {
          tab.addEventListener('click', () => {
            this.tabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');
          });
        });
      }

      setupSwatches() {
        const swatches = this.querySelectorAll('.ai-premium-showcase-swatch-{{ ai_gen_id }}');
        swatches.forEach(swatch => {
          swatch.addEventListener('click', function() {
            const parent = this.closest('.ai-premium-showcase-swatches-{{ ai_gen_id }}');
            parent.querySelectorAll('.ai-premium-showcase-swatch-{{ ai_gen_id }}').forEach(s => {
              s.classList.remove('active');
            });
            this.classList.add('active');
          });
        });
      }
    }

    customElements.define('premium-product-showcase-{{ ai_gen_id }}', PremiumProductShowcase{{ai_gen_id}});
  })();
</script>

