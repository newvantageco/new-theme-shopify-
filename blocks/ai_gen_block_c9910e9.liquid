    {% if block.settings.show_company_name %}
      <h1 class="ai-contact-company-name-{{ ai_gen_id }}">{{ block.settings.company_name }}</h1>
      {% if block.settings.tagline != blank %}
        <p class="ai-contact-tagline-{{ ai_gen_id }}">{{ block.settings.tagline }}</p>
      {% endif %}
    {% endif %}
  </div>

  <div class="ai-contact-info-container-{{ ai_gen_id }}">
    {% if block.settings.show_company_details %}
      <div class="ai-contact-section-{{ ai_gen_id }}">
        <h2 class="ai-contact-section-title-{{ ai_gen_id }}">{{ block.settings.company_section_title }}</h2>
        
        <div class="ai-contact-item-{{ ai_gen_id }}">
