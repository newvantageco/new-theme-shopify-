{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-info-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    border-radius: {{ block.settings.border_radius }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .ai-contact-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
    padding-bottom: {{ block.settings.header_spacing }}px;
    border-bottom: 2px solid {{ block.settings.divider_color }};
  }

  .ai-contact-logo-container-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.content_spacing }}px;
    display: flex;
    justify-content: center;
  }

  .ai-contact-logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_max_width }}px;
    height: auto;
    border-radius: {{ block.settings.logo_border_radius }}px;
  }

  .ai-contact-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_max_width }}px;
    height: {{ block.settings.logo_height }}px;
    background-color: {{ block.settings.logo_placeholder_bg }};
    border: 2px dashed {{ block.settings.logo_placeholder_border }};
    border-radius: {{ block.settings.logo_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-contact-logo-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    color: {{ block.settings.logo_placeholder_border }};
    opacity: 0.6;
  }

  .ai-contact-logo-text-{{ ai_gen_id }} {
    position: absolute;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: {{ block.settings.logo_placeholder_border }};
    opacity: 0.8;
    white-space: nowrap;
  }

  .ai-contact-company-name-{{ ai_gen_id }} {
    color: {{ block.settings.company_name_color }};
    font-size: {{ block.settings.company_name_size }}px;
    font-weight: 700;
    margin: 0;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-family: serif;
    line-height: 1.2;
  }

  .ai-contact-tagline-{{ ai_gen_id }} {
    color: {{ block.settings.tagline_color }};
    font-size: {{ block.settings.tagline_size }}px;
    font-style: italic;
    margin: 8px 0 0;
    opacity: 0.8;
    line-height: 1.4;
  }

  .ai-contact-info-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.section_gap }}px;
    align-items: start;
  }

  .ai-contact-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.section_background_color }};
    padding: {{ block.settings.section_padding }}px;
    border-radius: {{ block.settings.section_border_radius }}px;
    border: 1px solid {{ block.settings.section_border_color }};
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .ai-contact-section-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, {{ block.settings.accent_color }}, {{ block.settings.accent_color_secondary }});
  }

  .ai-contact-section-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
  }

  .ai-contact-section-title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.content_spacing }}px;
    text-transform: {{ block.settings.heading_transform }};
    letter-spacing: 1px;
    display: flex;
    align-items: center;
    gap: 10px;
    line-height: 1.3;
  }

  .ai-contact-section-title-{{ ai_gen_id }}::after {
    content: '';
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, {{ block.settings.accent_color }}, transparent);
  }

  .ai-contact-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    margin-bottom: {{ block.settings.item_spacing }}px;
    gap: 15px;
    padding: 12px 0;
    border-bottom: 1px solid {{ block.settings.item_border_color }};
  }

  .ai-contact-item-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
    border-bottom: none;
  }

  .ai-contact-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background: linear-gradient(135deg, {{ block.settings.icon_background_color }}, {{ block.settings.icon_background_secondary }});
    color: {{ block.settings.icon_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    margin-top: 2px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .ai-contact-icon-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.55);
    height: calc({{ block.settings.icon_size }}px * 0.55);
  }

  .ai-contact-content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-contact-label-{{ ai_gen_id }} {
    color: {{ block.settings.label_color }};
    font-size: {{ block.settings.label_size }}px;
    font-weight: 600;
    margin: 0 0 6px;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    line-height: 1.2;
  }

  .ai-contact-value-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .ai-contact-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 500;
    word-break: break-all;
  }

  .ai-contact-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: underline;
    text-decoration-color: {{ block.settings.accent_color }};
  }

  .ai-contact-registered-note-{{ ai_gen_id }} {
    background-color: {{ block.settings.registered_bg_color }};
    border: 1px solid {{ block.settings.registered_border_color }};
    border-radius: {{ block.settings.section_border_radius }}px;
    padding: 16px;
    margin-top: {{ block.settings.section_gap }}px;
    text-align: center;
  }

  .ai-contact-registered-title-{{ ai_gen_id }} {
    color: {{ block.settings.registered_title_color }};
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 8px;
    text-transform: uppercase;
    letter-spacing: 1px;
    line-height: 1.3;
  }

  .ai-contact-registered-text-{{ ai_gen_id }} {
    color: {{ block.settings.registered_text_color }};
    font-size: 13px;
    line-height: 1.5;
    margin: 0;
    font-style: italic;
  }

  .ai-contact-footer-{{ ai_gen_id }} {
    text-align: center;
    margin-top: {{ block.settings.header_spacing }}px;
    padding-top: {{ block.settings.content_spacing }}px;
    border-top: 1px solid {{ block.settings.divider_color }};
  }

  .ai-contact-footer-text-{{ ai_gen_id }} {
    color: {{ block.settings.footer_text_color }};
    font-size: {{ block.settings.footer_text_size }}px;
    margin: 0;
    opacity: 0.8;
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
    .ai-contact-info-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.section_gap | times: 0.75 }}px;
    }

    .ai-contact-info-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.75 }}px {{ block.settings.padding_horizontal | times: 0.75 }}px {{ block.settings.padding_bottom | times: 0.75 }}px;
      border-radius: {{ block.settings.border_radius | times: 0.75 }}px;
    }

    .ai-contact-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.8 }}px;
    }

    .ai-contact-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_max_width | times: 0.8 }}px;
      height: {{ block.settings.logo_height | times: 0.8 }}px;
    }

    .ai-contact-logo-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_max_width | times: 0.8 }}px;
    }

    .ai-contact-company-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.company_name_size | times: 0.85 }}px;
      letter-spacing: 1px;
    }

    .ai-contact-tagline-{{ ai_gen_id }} {
      font-size: {{ block.settings.tagline_size | times: 0.9 }}px;
    }

    .ai-contact-section-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.9 }}px;
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .ai-contact-section-title-{{ ai_gen_id }}::after {
      width: 100%;
      height: 1px;
    }

    .ai-contact-item-{{ ai_gen_id }} {
      gap: 12px;
      padding: 10px 0;
    }

    .ai-contact-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.85 }}px;
      height: {{ block.settings.icon_size | times: 0.85 }}px;
    }

    .ai-contact-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_size | times: 0.9 }}px;
    }

    .ai-contact-value-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.95 }}px;
    }

    .ai-contact-registered-note-{{ ai_gen_id }} {
      padding: 14px;
      margin-top: {{ block.settings.section_gap | times: 0.75 }}px;
    }

    .ai-contact-registered-title-{{ ai_gen_id }} {
      font-size: 13px;
    }

    .ai-contact-registered-text-{{ ai_gen_id }} {
      font-size: 12px;
    }

    .ai-contact-footer-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.footer_text_size | times: 0.9 }}px;
    }

    .ai-contact-section-{{ ai_gen_id }}:hover {
      transform: none;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-contact-info-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.6 }}px {{ block.settings.padding_horizontal | times: 0.6 }}px {{ block.settings.padding_bottom | times: 0.6 }}px;
      border-radius: {{ block.settings.border_radius | times: 0.5 }}px;
    }

    .ai-contact-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.7 }}px;
      border-radius: {{ block.settings.section_border_radius | times: 0.75 }}px;
    }

    .ai-contact-info-container-{{ ai_gen_id }} {
      gap: {{ block.settings.section_gap | times: 0.6 }}px;
    }

    .ai-contact-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_max_width | times: 0.7 }}px;
      height: {{ block.settings.logo_height | times: 0.7 }}px;
    }

    .ai-contact-logo-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_max_width | times: 0.7 }}px;
    }

    .ai-contact-company-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.company_name_size | times: 0.75 }}px;
      letter-spacing: 0.5px;
    }

    .ai-contact-tagline-{{ ai_gen_id }} {
      font-size: {{ block.settings.tagline_size | times: 0.85 }}px;
    }

    .ai-contact-section-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
      margin-bottom: {{ block.settings.content_spacing | times: 0.75 }}px;
    }

    .ai-contact-item-{{ ai_gen_id }} {
      gap: 10px;
      padding: 8px 0;
      margin-bottom: {{ block.settings.item_spacing | times: 0.75 }}px;
    }

    .ai-contact-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.75 }}px;
      height: {{ block.settings.icon_size | times: 0.75 }}px;
    }

    .ai-contact-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_size | times: 0.85 }}px;
      margin-bottom: 4px;
    }

    .ai-contact-value-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-contact-registered-note-{{ ai_gen_id }} {
      padding: 12px;
      margin-top: {{ block.settings.section_gap | times: 0.6 }}px;
    }

    .ai-contact-registered-title-{{ ai_gen_id }} {
      font-size: 12px;
      margin-bottom: 6px;
    }

    .ai-contact-registered-text-{{ ai_gen_id }} {
      font-size: 11px;
    }

    .ai-contact-header-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.header_spacing | times: 0.75 }}px;
      padding-bottom: {{ block.settings.header_spacing | times: 0.75 }}px;
    }

    .ai-contact-footer-{{ ai_gen_id }} {
      margin-top: {{ block.settings.header_spacing | times: 0.75 }}px;
      padding-top: {{ block.settings.content_spacing | times: 0.75 }}px;
    }

    .ai-contact-footer-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.footer_text_size | times: 0.85 }}px;
    }
  }

  @media screen and (max-width: 360px) {
    .ai-contact-info-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.5 }}px {{ block.settings.padding_horizontal | times: 0.5 }}px {{ block.settings.padding_bottom | times: 0.5 }}px;
    }

    .ai-contact-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px;
    }

    .ai-contact-company-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.company_name_size | times: 0.7 }}px;
    }

    .ai-contact-section-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-contact-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_max_width | times: 0.6 }}px;
      height: {{ block.settings.logo_height | times: 0.6 }}px;
    }

    .ai-contact-logo-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_max_width | times: 0.6 }}px;
    }

    .ai-contact-logo-text-{{ ai_gen_id }} {
      font-size: 10px;
      bottom: 4px;
    }
  }
{% endstyle %}

<div class="ai-contact-info-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contact-header-{{ ai_gen_id }}">
    <div class="ai-contact-logo-container-{{ ai_gen_id }}">
      {% if block.settings.logo %}
        <img
          src="{{ block.settings.logo | image_url: width: block.settings.logo_max_width | times: 2 }}"
          alt="{{ block.settings.company_name | escape }}"
          class="ai-contact-logo-{{ ai_gen_id }}"
          width="{{ block.settings.logo_max_width }}"
          height="{{ block.settings.logo_height }}"
          loading="lazy"
        >
      {% else %}
        <div class="ai-contact-logo-placeholder-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
