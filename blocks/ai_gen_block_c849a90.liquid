<script>
  (function() {
    class CollectionBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentCollection = this.dataset.currentCollection;
        this.isUpdating = false;
      }

      connectedCallback() {
        this.setupNavigation();
        this.updateActiveStates();
      }

      setupNavigation() {
        const navLinks = this.querySelectorAll('.ai-collection-nav-link-{{ ai_gen_id }}');
        
        navLinks.forEach(link => {
          link.addEventListener('click', (e) => {
            if (this.isUpdating) return;
            
            const collectionHandle = link.dataset.collectionHandle;
            
            if (collectionHandle && collectionHandle !== 'all') {
              e.preventDefault();
              this.updateBannerContent(link);
              this.updateActiveStates(link);
              
              setTimeout(() => {
                window.location.href = link.href;
              }, 600);
            }
          });
        });
      }

      updateBannerContent(clickedLink) {
        if (this.isUpdating) return;
        this.isUpdating = true;

        const title = clickedLink.dataset.collectionTitle;
        const description = clickedLink.dataset.collectionDescription;
        const imageUrl = clickedLink.dataset.collectionImage;

        const titleElement = this.querySelector('.ai-collection-banner-title-{{ ai_gen_id }}');
        const descriptionElement = this.querySelector('.ai-collection-banner-description-{{ ai_gen_id }}');
        const imageElement = this.querySelector('.ai-collection-banner-image-{{ ai_gen_id }}');
        const placeholderElement = this.querySelector('.ai-collection-banner-placeholder-{{ ai_gen_id }}');

        if (titleElement && title) {
          titleElement.style.opacity = '0';
          titleElement.style.transform = 'translateY(20px)';
          
          setTimeout(() => {
            titleElement.textContent = title;
            titleElement.style.opacity = '1';
            titleElement.style.transform = 'translateY(0)';
          }, 300);
        }

        if (descriptionElement && description) {
          descriptionElement.style.opacity = '0';
          descriptionElement.style.transform = 'translateY(20px)';
          
          setTimeout(() => {
            descriptionElement.textContent = description;
            descriptionElement.style.opacity = '1';
            descriptionElement.style.transform = 'translateY(0)';
          }, 400);
        }

        if (imageElement && imageUrl) {
          imageElement.style.opacity = '0';
          imageElement.style.transform = 'scale(1.1)';
          
          setTimeout(() => {
            imageElement.src = imageUrl;
            imageElement.style.opacity = '1';
            imageElement.style.transform = 'scale(1)';
          }, 200);
        }

        setTimeout(() => {
          this.isUpdating = false;
        }, 600);
      }

      updateActiveStates(activeLink = null) {
        const navLinks = this.querySelectorAll('.ai-collection-nav-link-{{ ai_gen_id }}');
        
        navLinks.forEach(link => {
          link.classList.remove('active');
          
          if (activeLink) {
            if (link === activeLink) {
              link.classList.add('active');
            }
          } else {
            const linkHandle = link.dataset.collectionHandle;
            if (
              (linkHandle === 'all' && this.currentCollection === 'all') ||
              (linkHandle === this.currentCollection)
            ) {
              link.classList.add('active');
            }
          }
        });
      }
    }

    customElements.define('collection-banner-{{ ai_gen_id }}', CollectionBanner{{ ai_gen_id }});
  })();
</script>

