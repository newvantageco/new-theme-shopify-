    }

    .ai-email-signup-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-email-signup-button-{{ ai_gen_id }} {
      min-width: auto;
      width: 100%;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-email-signup-form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-email-signup-input-{{ ai_gen_id }},
    .ai-email-signup-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-email-signup-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-email-signup-container-{{ ai_gen_id }}">
    <div class="ai-email-signup-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank or block.settings.description != blank %}
        <div class="ai-email-signup-text-wrapper-{{ ai_gen_id }}">
          {% if block.settings.heading != blank %}
            <h2 class="ai-email-signup-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
          {% endif %}

          {% if block.settings.description != blank %}
            <div class="ai-email-signup-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
          {% endif %}
        </div>
      {% endif %}

      <div class="ai-email-signup-form-wrapper-{{ ai_gen_id }}">
        {% form 'customer' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          
          <div class="ai-email-signup-form-{{ ai_gen_id }}">
            <input
              type="email"
              name="contact[email]"
              class="ai-email-signup-input-{{ ai_gen_id }}"
              value="{{ form.email }}"
              placeholder="{{ block.settings.email_placeholder }}"
              aria-label="Email address"
              aria-required="true"
              autocomplete="email"
              {% if form.errors %}
                aria-invalid="true"
                aria-describedby="ai-email-signup-error-{{ ai_gen_id }}"
              {% endif %}
              {% if form.posted_successfully? %}
                aria-describedby="ai-email-signup-success-{{ ai_gen_id }}"
              {% endif %}
              required
            >
            
            <button
              type="submit"
              class="ai-email-signup-button-{{ ai_gen_id }}"
              aria-label="Subscribe to newsletter"
            >
              {{ block.settings.button_text }}
            </button>
          </div>

          {% if form.errors %}
            <div
              id="ai-email-signup-error-{{ ai_gen_id }}"
              class="ai-email-signup-message-{{ ai_gen_id }} ai-email-signup-error-{{ ai_gen_id }}"
              role="alert"
            >
              {{ form.errors.messages.email }}
            </div>
          {% endif %}

          {% if form.posted_successfully? %}
            <div
              id="ai-email-signup-success-{{ ai_gen_id }}"
              class="ai-email-signup-message-{{ ai_gen_id }} ai-email-signup-success-{{ ai_gen_id }}"
              role="status"
            >
              {{ block.settings.success_message }}
            </div>
          {% endif %}
        {% endform %}

        {% if block.settings.privacy_text != blank %}
          <div class="ai-email-signup-privacy-{{ ai_gen_id }}">{{ block.settings.privacy_text }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

