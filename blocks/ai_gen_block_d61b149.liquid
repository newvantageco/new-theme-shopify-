{% style %}
  .ai-email-signup-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;
    overflow: hidden;
  }

  .ai-email-signup-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.padding_horizontal }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-email-signup-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-email-signup-text-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.text_max_width }}px;
    width: 100%;
  }

  .ai-email-signup-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    line-height: {{ block.settings.heading_line_height }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    text-transform: {{ block.settings.heading_transform }};
    letter-spacing: {{ block.settings.heading_letter_spacing }}em;
  }

  .ai-email-signup-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.text_line_height }};
    margin: 0;
    opacity: {{ block.settings.text_opacity }};
  }

  .ai-email-signup-form-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.form_max_width }}px;
  }

  .ai-email-signup-form-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.input_button_gap }}px;
    align-items: stretch;
    width: 100%;
    background-color: {{ block.settings.form_background }};
    border-radius: {{ block.settings.form_border_radius }}px;
    padding: {{ block.settings.form_padding }}px;
    box-shadow: {{ block.settings.form_shadow }};
    border: {{ block.settings.form_border_width }}px solid {{ block.settings.form_border_color }};
  }

  .ai-email-signup-input-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.input_padding }}px {{ block.settings.input_padding | times: 1.2 }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.input_font_size }}px;
    font-weight: {{ block.settings.input_font_weight }};
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
  }

  .ai-email-signup-input-{{ ai_gen_id }}:focus {
    border-color: {{ block.settings.input_focus_border }};
    box-shadow: 0 0 0 {{ block.settings.input_focus_ring }}px {{ block.settings.input_focus_border }}{{ block.settings.input_focus_opacity }};
    transform: translateY(-1px);
  }

  .ai-email-signup-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.placeholder_color }};
    opacity: {{ block.settings.placeholder_opacity }};
    font-weight: {{ block.settings.placeholder_font_weight }};
  }

  .ai-email-signup-button-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 2 }}px;
    background: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-transform: {{ block.settings.button_text_transform }};
    letter-spacing: {{ block.settings.button_letter_spacing }}em;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    white-space: nowrap;
    position: relative;
    overflow: hidden;
    min-width: {{ block.settings.button_min_width }}px;
  }

  .ai-email-signup-button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text }};
    border-color: {{ block.settings.button_hover_border }};
    transform: translateY(-2px);
    box-shadow: 0 {{ block.settings.button_hover_shadow }}px {{ block.settings.button_hover_shadow | times: 2 }}px rgba(0, 0, 0, 0.1);
  }

  .ai-email-signup-button-{{ ai_gen_id }}:active {
    transform: translateY(0);
  }

  .ai-email-signup-message-{{ ai_gen_id }} {
    margin-top: {{ block.settings.message_spacing }}px;
    padding: {{ block.settings.message_padding }}px {{ block.settings.message_padding | times: 1.5 }}px;
    border-radius: {{ block.settings.message_border_radius }}px;
    font-size: {{ block.settings.message_font_size }}px;
    font-weight: {{ block.settings.message_font_weight }};
    text-align: center;
    animation: slideIn 0.3s ease-out;
  }

  .ai-email-signup-success-{{ ai_gen_id }} {
    background-color: {{ block.settings.success_background }};
    color: {{ block.settings.success_text_color }};
    border: {{ block.settings.success_border_width }}px solid {{ block.settings.success_border }};
  }

  .ai-email-signup-error-{{ ai_gen_id }} {
    background-color: {{ block.settings.error_background }};
    color: {{ block.settings.error_text_color }};
    border: {{ block.settings.error_border_width }}px solid {{ block.settings.error_border }};
  }

  .ai-email-signup-privacy-{{ ai_gen_id }} {
    color: {{ block.settings.privacy_text_color }};
    font-size: {{ block.settings.privacy_font_size }}px;
    font-weight: {{ block.settings.privacy_font_weight }};
    margin-top: {{ block.settings.privacy_spacing }}px;
    line-height: {{ block.settings.privacy_line_height }};
    opacity: {{ block.settings.privacy_opacity }};
  }

  .ai-email-signup-privacy-{{ ai_gen_id }} a {
    color: {{ block.settings.privacy_link_color }};
    text-decoration: none;
    font-weight: {{ block.settings.privacy_link_weight }};
    transition: all 0.2s ease;
  }

  .ai-email-signup-privacy-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.privacy_link_hover }};
    text-decoration: underline;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 768px) {
    .ai-email-signup-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.8 }}px 0;
    }

    .ai-email-signup-container-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.mobile_padding }}px;
    }

    .ai-email-signup-form-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: {{ block.settings.mobile_gap }}px;
      padding: {{ block.settings.form_padding | times: 0.8 }}px;
    }

    .ai-email-signup-heading-{{ ai_gen_id }} {
