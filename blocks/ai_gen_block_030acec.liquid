<div class="ai-flexible-promo-bar-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% assign messages = '' %}
  {% assign message_count = 0 %}
  
  {% for i in (1..6) %}
    {% assign message_key = 'message_' | append: i %}
    {% assign message_value = block.settings[message_key] %}
    {% if message_value != blank %}
      {% if messages != blank %}
        {% assign messages = messages | append: '|' %}
      {% endif %}
      {% assign messages = messages | append: message_value %}
      {% assign message_count = message_count | plus: 1 %}
    {% endif %}
  {% endfor %}

  {% assign message_array = messages | split: '|' %}
  {% for message in message_array %}
    <div class="ai-promo-item-{{ ai_gen_id }}">
      {% if block.settings.show_icons %}
        {% case forloop.index %}
          {% when 1 %}
            <svg class="ai-promo-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          {% when 2 %}
            <svg class="ai-promo-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
              <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          {% when 3 %}
            <svg class="ai-promo-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
              <path d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
          {% when 4 %}
            <svg class="ai-promo-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
              <path d="M12 14l9-5-9-5-9 5 9 5z"/>
              <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
            </svg>
          {% when 5 %}
            <svg class="ai-promo-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
              <path d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
            </svg>
          {% when 6 %}
            <svg class="ai-promo-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
              <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
        {% endcase %}
      {% endif %}
      <span>{{ message }}</span>
    </div>
    
    {% unless forloop.last %}
      {% if block.settings.show_dividers %}
        <span class="ai-promo-divider-{{ ai_gen_id }}">{{ block.settings.divider_symbol }}</span>
      {% endif %}
    {% endunless %}
  {% endfor %}
