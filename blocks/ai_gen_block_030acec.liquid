    font-size: {{ block.settings.divider_size }}px;
    margin: {{ block.settings.divider_margin_vertical }}px {{ block.settings.divider_margin_horizontal }}px;
    font-weight: {{ block.settings.divider_font_weight }};
    opacity: {{ block.settings.divider_opacity }};
  }

  {% if block.settings.enable_animation %}
