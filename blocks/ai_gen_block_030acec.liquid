{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-flexible-promo-bar-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    background-image: {% if block.settings.background_gradient %}linear-gradient({{ block.settings.gradient_angle }}deg, {{ block.settings.gradient_start }}, {{ block.settings.gradient_end }}){% else %}none{% endif %};
    color: {{ block.settings.text_color }};
    font-family: {{ block.settings.font_family }}, Arial, sans-serif;
    font-weight: {{ block.settings.font_weight }};
    text-transform: {{ block.settings.text_transform }};
    display: flex;
    justify-content: {{ block.settings.alignment }};
    align-items: center;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    margin: {{ block.settings.margin_top }}px {{ block.settings.margin_horizontal }}px {{ block.settings.margin_bottom }}px;
    text-align: {{ block.settings.text_align }};
    font-size: {{ block.settings.font_size }}px;
    letter-spacing: {{ block.settings.letter_spacing }}px;
    line-height: {{ block.settings.line_height }};
    width: 100%;
    gap: {{ block.settings.item_gap }}px;
    border-top: {{ block.settings.border_top_width }}px {{ block.settings.border_top_style }} {{ block.settings.border_top_color }};
    border-bottom: {{ block.settings.border_bottom_width }}px {{ block.settings.border_bottom_style }} {{ block.settings.border_bottom_color }};
    border-left: {{ block.settings.border_left_width }}px {{ block.settings.border_left_style }} {{ block.settings.border_left_color }};
    border-right: {{ block.settings.border_right_width }}px {{ block.settings.border_right_style }} {{ block.settings.border_right_color }};
    border-radius: {{ block.settings.border_radius_top_left }}px {{ block.settings.border_radius_top_right }}px {{ block.settings.border_radius_bottom_right }}px {{ block.settings.border_radius_bottom_left }}px;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_spread }}px {{ block.settings.shadow_color }};
    position: {{ block.settings.position }};
    z-index: {{ block.settings.z_index }};
    opacity: {{ block.settings.opacity }};
    {% if block.settings.enable_animation %}
      animation: ai-promo-animation-{{ ai_gen_id }} {{ block.settings.animation_duration }}s {{ block.settings.animation_timing }} {{ block.settings.animation_delay }}s {{ block.settings.animation_iteration }};
    {% endif %}
  }

  .ai-flexible-promo-bar-{{ ai_gen_id }} .ai-promo-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_spacing }}px;
    white-space: nowrap;
    padding: {{ block.settings.item_padding_vertical }}px {{ block.settings.item_padding_horizontal }}px;
    margin: {{ block.settings.item_margin_vertical }}px {{ block.settings.item_margin_horizontal }}px;
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    border: {{ block.settings.item_border_width }}px {{ block.settings.item_border_style }} {{ block.settings.item_border_color }};
    transition: all {{ block.settings.hover_transition_duration }}s ease;
  }

  .ai-flexible-promo-bar-{{ ai_gen_id }} .ai-promo-item-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.item_hover_background }};
    color: {{ block.settings.item_hover_text_color }};
    transform: {{ block.settings.hover_transform }};
  }

  .ai-flexible-promo-bar-{{ ai_gen_id }} .ai-promo-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    stroke: {{ block.settings.icon_color }};
    stroke-width: {{ block.settings.icon_stroke_width }};
    fill: none;
    margin: {{ block.settings.icon_margin_top }}px {{ block.settings.icon_margin_right }}px {{ block.settings.icon_margin_bottom }}px {{ block.settings.icon_margin_left }}px;
  }

