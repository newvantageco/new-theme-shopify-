{% doc %}
  @prompt
    design 404 for page for my site

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-404-page-{{ ai_gen_id }} {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
    text-align: center;
  }

  .ai-404-content-{{ ai_gen_id }} {
    max-width: 600px;
    width: 100%;
  }

  .ai-404-number-{{ ai_gen_id }} {
    font-size: {{ block.settings.error_number_size }}px;
    font-weight: 700;
    color: {{ block.settings.error_number_color }};
    margin: 0 0 20px;line-height: 1;
  }

  .ai-404-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-404-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 40px;
    line-height: 1.6;
  }

  .ai-404-buttons-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    justify-content: center;
    align-items: center;
  }

  .ai-404-button-primary-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-404-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    color: {{ block.settings.primary_button_text_color }};
  }

  .ai-404-button-secondary-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    background-color: transparent;
    color: {{ block.settings.secondary_button_color }};
    text-decoration: none;
    border: 2px solid {{ block.settings.secondary_button_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .ai-404-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_color }};
    color: {{ block.settings.secondary_button_hover_color }};
  }

  .ai-404-search-form-{{ ai_gen_id }} {
    margin-top: 40px;max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-404-search-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    gap: 8px;
  }

  .ai-404-search-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 12px 16px;
    border: 2px solid {{ block.settings.search_border_color }};
    border-radius: {{ block.settings.search_border_radius }}px;
    font-size: 16px;
    background-color: {{ block.settings.search_bg_color }};
    color: {{ block.settings.search_text_color }};}

  .ai-404-search-input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.primary_button_bg }};
  }

  .ai-404-search-button-{{ ai_gen_id }} {
    padding: 12px 20px;
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_text_color }};
    border: none;
    border-radius: {{ block.settings.search_border_radius }}px;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-404-search-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
  }

  .ai-404-image-{{ ai_gen_id }} {
    margin-bottom: 30px;
    max-width: 300px;
    width: 100%;
    height: auto;
  }

  .ai-404-image-placeholder-{{ ai_gen_id }} {
    margin-bottom: 30px;
    max-width: 300px;
    width: 100%;
    height: 200px;
    background-color: #f8f9fa;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: auto;
    margin-right: auto;
    position: relative;
  }

  .ai-404-image-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-404-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 4px 8px;
    border-radius: 4px;
  }

  @media screen and (max-width: 768px) {
    .ai-404-page-{{ ai_gen_id }} {
      padding: 40px 20px;
      min-height: 60vh;
    }

    .ai-404-number-{{ ai_gen_id }} {
      font-size: {{ block.settings.error_number_size | times: 0.7 }}px;
    }

    .ai-404-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-404-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: stretch;
    }

    .ai-404-button-primary-{{ ai_gen_id }},
    .ai-404-button-secondary-{{ ai_gen_id }} {
      width: 100%;
      justify-content: center;
    }
  }
{% endstyle %}

<div class="ai-404-page-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-404-content-{{ ai_gen_id }}">
    {% if block.settings.show_image %}
      {% if block.settings.error_image %}
        <img
          src="{{ block.settings.error_image | image_url: width: 600 }}"
          alt="{{ block.settings.error_image.alt | escape }}"
          class="ai-404-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.error_image.width }}"
          height="{{ block.settings.error_image.height }}"
        >
      {% else %}
        <div class="ai-404-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-404-empty-state-{{ ai_gen_id }}">
            Add an error image
          </div>
        </div>
      {% endif %}
    {% endif %}

    {% if block.settings.show_error_number %}
      <h1 class="ai-404-number-{{ ai_gen_id }}">{{ block.settings.error_number }}</h1>
    {% endif %}

    {% if block.settings.heading != blank %}
      <h2 class="ai-404-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-404-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    <div class="ai-404-buttons-{{ ai_gen_id }}">
      {% if block.settings.primary_btn_text != blank %}
        <a href="{{ block.settings.primary_button_link }}" class="ai-404-button-primary-{{ ai_gen_id }}">
          {{ block.settings.primary_btn_text }}
        </a>
      {% endif %}

      {% if block.settings.secondary_btn_text != blank %}
        <a href="{{ block.settings.secondary_button_link }}" class="ai-404-button-secondary-{{ ai_gen_id }}">
          {{ block.settings.secondary_btn_text }}
        </a>
      {% endif %}
    </div>

    {% if block.settings.show_search %}
      <div class="ai-404-search-form-{{ ai_gen_id }}">
        <form action="{{ routes.search_url }}" method="get" class="ai-404-search-wrapper-{{ ai_gen_id }}">
          <input
            type="search"
            name="q"
            class="ai-404-search-input-{{ ai_gen_id }}"
            placeholder="{{ block.settings.search_placeholder }}"
            aria-label="Search"
          >
          <button type="submit" class="ai-404-search-button-{{ ai_gen_id }}">
            {{ block.settings.search_button_text }}
          </button>
        </form>
      </div>
    {% endif %}
  </div>
</div>

