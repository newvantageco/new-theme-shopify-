<div class="ai-virtual-store-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-virtual-store-container-{{ ai_gen_id }}">
    
    {% if block.settings.show_main_headline %}
      <div class="ai-virtual-store-main-headline-{{ ai_gen_id }}">
        {% if block.settings.pre_headline != blank %}
          <div class="ai-virtual-store-pre-headline-{{ ai_gen_id }}">
            {{ block.settings.pre_headline }}
          </div>
        {% endif %}
        
        {% if block.settings.main_headline != blank %}
          <h2 class="ai-virtual-store-headline-{{ ai_gen_id }}">
            {{ block.settings.main_headline }}
          </h2>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-virtual-store-booking-section-{{ ai_gen_id }}">
      
      <div class="ai-virtual-store-left-column-{{ ai_gen_id }}">
        {% if block.settings.invitation_pre_headline != blank %}
          <div class="ai-virtual-store-invitation-pre-headline-{{ ai_gen_id }}">
            {{ block.settings.invitation_pre_headline }}
          </div>
        {% endif %}
        
        {% if block.settings.invitation_headline != blank %}
          <h3 class="ai-virtual-store-invitation-headline-{{ ai_gen_id }}">
            {{ block.settings.invitation_headline }}
          </h3>
        {% endif %}
        
        {% if block.settings.invitation_text != blank %}
          <div class="ai-virtual-store-invitation-text-{{ ai_gen_id }}">
            {{ block.settings.invitation_text }}
          </div>
        {% endif %}
        
        <div class="ai-virtual-store-buttons-{{ ai_gen_id }}">
          {% if block.settings.primary_button_label != blank %}
            <a 
              href="{{ block.settings.primary_button_link }}" 
              class="ai-virtual-store-btn-{{ ai_gen_id }} ai-virtual-store-btn-primary-{{ ai_gen_id }}"
            >
              {{ block.settings.primary_button_label }}
              <span class="ai-virtual-store-btn-arrow-{{ ai_gen_id }}">→</span>
            </a>
          {% endif %}
          
          {% if block.settings.secondary_button_label != blank %}
            <a 
              href="{{ block.settings.secondary_button_link }}" 
              class="ai-virtual-store-btn-{{ ai_gen_id }} ai-virtual-store-btn-secondary-{{ ai_gen_id }}"
            >
              {{ block.settings.secondary_button_label }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="ai-virtual-store-right-column-{{ ai_gen_id }}">
        <div class="ai-virtual-store-image-container-{{ ai_gen_id }}">
          {% if block.settings.service_image %}
            <img
              src="{{ block.settings.service_image | image_url: width: 800 }}"
              alt="{{ block.settings.service_image.alt | escape }}"
              class="ai-virtual-store-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.service_image.width }}"
              height="{{ block.settings.service_image.height }}"
            >
          {% else %}
            <div class="ai-virtual-store-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-virtual-store-empty-state-{{ ai_gen_id }}">
                Add an image representing your virtual service
              </div>
            </div>
          {% endif %}
        </div>
      </div>
      
    </div>
  </div>
</div>

