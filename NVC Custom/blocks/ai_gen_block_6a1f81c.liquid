      font-size: {{ block.settings.main_headline_size | times: 0.8 }}px;
    }

    .ai-virtual-store-invitation-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.invitation_headline_size | times: 0.9 }}px;
    }

    .ai-virtual-store-buttons-{{ ai_gen_id }} {
      flex-direction: column;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-virtual-store-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-virtual-store-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.main_headline_size | times: 0.7 }}px;
    }

    .ai-virtual-store-btn-{{ ai_gen_id }} {
