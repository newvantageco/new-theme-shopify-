    background-color: {{ block.settings.section_bg_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-virtual-store-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-virtual-store-main-headline-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.headline_spacing }}px;
  }

  .ai-virtual-store-pre-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.pre_headline_size }}px;
    font-weight: {{ block.settings.pre_headline_weight }};
    text-transform: uppercase;
    letter-spacing: {{ block.settings.pre_headline_spacing }}px;
    color: {{ block.settings.pre_headline_color }};
    margin-bottom: 16px;
    font-family: var(--g-font-1);
  }

  .ai-virtual-store-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.main_headline_size }}px;
    font-weight: {{ block.settings.main_headline_weight }};
    line-height: 1.3;
    color: {{ block.settings.main_headline_color }};
    margin: 0;
    font-family: var(--g-font-1);
  }

  .ai-virtual-store-headline-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
    transition: color 0.3s ease;
  }

  .ai-virtual-store-headline-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-virtual-store-booking-section-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: center;
    margin-top: {{ block.settings.booking_section_spacing }}px;
  }

  .ai-virtual-store-left-column-{{ ai_gen_id }} {
    padding-right: 20px;
  }

  .ai-virtual-store-invitation-pre-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.invitation_pre_headline_size }}px;
    font-weight: {{ block.settings.invitation_pre_headline_weight }};
    text-transform: uppercase;
    letter-spacing: {{ block.settings.invitation_pre_headline_spacing }}px;
    color: {{ block.settings.invitation_pre_headline_color }};
    margin-bottom: 12px;
    font-family: var(--g-font-1);
  }

  .ai-virtual-store-invitation-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.invitation_headline_size }}px;
    font-weight: {{ block.settings.invitation_headline_weight }};
    line-height: 1.3;
    color: {{ block.settings.invitation_headline_color }};
    margin: 0 0 20px;
    font-family: var(--g-font-1);
  }

  .ai-virtual-store-invitation-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.invitation_text_size }}px;
    line-height: 1.6;
    color: {{ block.settings.invitation_text_color }};
    margin-bottom: 32px;
    font-family: var(--g-font-2);
  }

  .ai-virtual-store-buttons-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-virtual-store-btn-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-transform: uppercase;
    letter-spacing: {{ block.settings.button_letter_spacing }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
    font-family: var(--g-font-1);
    min-height: 56px;
  }

  .ai-virtual-store-btn-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_color }};
    border-color: {{ block.settings.primary_button_bg }};
  }

  .ai-virtual-store-btn-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    color: {{ block.settings.primary_button_hover_color }};
    border-color: {{ block.settings.primary_button_hover_bg }};
  }

  .ai-virtual-store-btn-secondary-{{ ai_gen_id }} {
    background-color: transparent;
    color: {{ block.settings.secondary_button_color }};
    border-color: {{ block.settings.secondary_button_border }};
  }

  .ai-virtual-store-btn-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg }};
    color: {{ block.settings.secondary_button_hover_color }};
    border-color: {{ block.settings.secondary_button_hover_bg }};
  }

  .ai-virtual-store-btn-arrow-{{ ai_gen_id }} {
    margin-left: 8px;
    transition: transform 0.3s ease;
  }

  .ai-virtual-store-btn-{{ ai_gen_id }}:hover .ai-virtual-store-btn-arrow-{{ ai_gen_id }} {
    transform: translateX(4px);
  }

  .ai-virtual-store-right-column-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-virtual-store-image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-virtual-store-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-virtual-store-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    border-radius: {{ block.settings.image_border_radius }}px;
    position: relative;
  }

  .ai-virtual-store-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-virtual-store-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(255, 255, 255, 0.9);
    padding: 12px 20px;
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    font-family: var(--g-font-2);
  }

  @media screen and (max-width: 768px) {
    .ai-virtual-store-booking-section-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-virtual-store-left-column-{{ ai_gen_id }} {
      padding-right: 0;
      order: 2;
    }

