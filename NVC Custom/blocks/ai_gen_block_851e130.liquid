    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-value-hero-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-value-hero-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-value-hero-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: {{ block.settings.headline_weight }};
    color: {{ block.settings.headline_color }};
    margin: 0 0 20px;
    line-height: 1.2;
  }

  .ai-value-hero-subheadline-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheadline_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto 30px;
  }

  .ai-value-hero-price-banner-{{ ai_gen_id }} {
    background-color: {{ block.settings.price_banner_bg }};
    color: {{ block.settings.price_banner_text }};
    padding: 30px;
    border-radius: {{ block.settings.border_radius }}px;
    text-align: center;
    margin-bottom: 50px;
  }

  .ai-value-hero-price-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_title_size }}px;
    font-weight: 700;
    margin: 0 0 10px;
  }

  .ai-value-hero-price-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
    opacity: 0.9;
  }

  .ai-value-hero-included-{{ ai_gen_id }} {
    margin-bottom: 50px;
  }

  .ai-value-hero-included-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.headline_color }};
    text-align: center;
    margin: 0 0 30px;
  }

