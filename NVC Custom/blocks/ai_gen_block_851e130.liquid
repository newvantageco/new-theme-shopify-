    font-weight: 600;
    color: {{ block.settings.headline_color }};
    margin: 0 0 10px;
  }

  .ai-value-hero-included-item-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.5;
  }

