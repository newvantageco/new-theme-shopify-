    margin: 0 0 15px;
  }

  .ai-value-hero-explanation-text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-value-hero-cta-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-value-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_v }}px {{ block.settings.button_padding_h }}px;
    background-color: {{ block.settings.button_bg }};
    color: {{ block.settings.button_text_color }};
    font-size: {{ block.settings.button_size }}px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_bg }};
  }

  .ai-value-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg }};
    color: {{ block.settings.button_hover_text }};
    border-color: {{ block.settings.button_hover_bg }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-value-hero-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 0 {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-value-hero-headline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.headline_size }}px * 0.65);
    }

    .ai-value-hero-subheadline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheadline_size }}px * 0.9);
    }

    .ai-value-hero-price-banner-{{ ai_gen_id }} {
      padding: 25px 20px;
      margin-bottom: 35px;
    }

    .ai-value-hero-price-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.price_title_size }}px * 0.7);
    }

    .ai-value-hero-included-{{ ai_gen_id }} {
      margin-bottom: 35px;
    }

    .ai-value-hero-included-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 15px;
    }

    .ai-value-hero-included-item-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-value-hero-higher-rx-{{ ai_gen_id }} {
      padding: 25px 20px;
      margin-bottom: 35px;
    }

    .ai-value-hero-comparison-{{ ai_gen_id }} {
      margin-bottom: 35px;
    }

    .ai-value-hero-table-{{ ai_gen_id }} {
      font-size: 14px;
    }

    .ai-value-hero-table-{{ ai_gen_id }} th,
    .ai-value-hero-table-{{ ai_gen_id }} td {
      padding: 15px 12px;
    }

    .ai-value-hero-explanation-{{ ai_gen_id }} {
      padding: 30px 20px;
      margin-bottom: 35px;
    }

    .ai-value-hero-button-{{ ai_gen_id }} {
      width: 100%;
      max-width: 300px;
    }
  }
{% endstyle %}

