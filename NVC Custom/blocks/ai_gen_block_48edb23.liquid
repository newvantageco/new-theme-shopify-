{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-glasses-promo-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-glasses-promo-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 {{ block.settings.container_padding }}px;
  }

  .ai-glasses-promo-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: center;
    min-height: 500px;
  }

  .ai-glasses-promo-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-glasses-promo-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: 600;
    color: {{ block.settings.headline_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px;
    line-height: 1.2;
    text-transform: {{ block.settings.headline_transform }};
  }

  .ai-glasses-promo-subtext-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtext_size }}px;
    color: {{ block.settings.subtext_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px;
    line-height: 1.6;
  }

  .ai-glasses-promo-note-{{ ai_gen_id }} {
    font-size: {{ block.settings.note_size }}px;
    color: {{ block.settings.note_color }};
    margin: 0 0 {{ block.settings.text_spacing | times: 1.5 }}px;
    font-style: italic;
  }

  .ai-glasses-promo-button-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    padding: {{ block.settings.button_padding_v }}px {{ block.settings.button_padding_h }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_bg_color }};
  }

  .ai-glasses-promo-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg }};
    color: {{ block.settings.button_hover_text }};
    border-color: {{ block.settings.button_hover_bg }};
    transform: translateY(-2px);
  }

  .ai-glasses-promo-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-glasses-promo-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-glasses-promo-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-glasses-promo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-glasses-promo-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(255, 255, 255, 0.9);
    padding: 12px 20px;
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-glasses-promo-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.column_gap | divided_by: 2 }}px;
      {% if block.settings.mobile_layout == 'image_first' %}
        grid-template-rows: auto auto;
      {% else %}
        grid-template-rows: auto auto;
      {% endif %}
    }

    {% if block.settings.mobile_layout == 'image_first' %}
      .ai-glasses-promo-content-{{ ai_gen_id }} {
        order: 2;
      }
      .ai-glasses-promo-image-wrapper-{{ ai_gen_id }} {
        order: 1;
      }
    {% endif %}

    .ai-glasses-promo-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.8 }}px;
    }

    .ai-glasses-promo-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | divided_by: 2 }}px;
      text-align: center;
    }

    .ai-glasses-promo-image-wrapper-{{ ai_gen_id }} {
      min-height: 300px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-glasses-promo-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.7 }}px;
    }

    .ai-glasses-promo-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-glasses-promo-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-glasses-promo-container-{{ ai_gen_id }}">
    <div class="ai-glasses-promo-grid-{{ ai_gen_id }}">
      <div class="ai-glasses-promo-content-{{ ai_gen_id }}">
        {% if block.settings.headline != blank %}
          <h2 class="ai-glasses-promo-headline-{{ ai_gen_id }}">
            {{ block.settings.headline }}
          </h2>
        {% endif %}

        {% if block.settings.subtext != blank %}
          <p class="ai-glasses-promo-subtext-{{ ai_gen_id }}">
            {{ block.settings.subtext }}
          </p>
        {% endif %}

        {% if block.settings.note != blank %}
          <p class="ai-glasses-promo-note-{{ ai_gen_id }}">
            {{ block.settings.note }}
          </p>
        {% endif %}

        {% if block.settings.button_text != blank %}
          <a 
            href="{{ block.settings.button_link | default: '#' }}" 
            class="ai-glasses-promo-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <div class="ai-glasses-promo-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 800 }}"
            alt="{{ block.settings.image.alt | escape }}"
            class="ai-glasses-promo-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        {% else %}
          <div class="ai-glasses-promo-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-glasses-promo-empty-state-{{ ai_gen_id }}">
              Add your glasses image
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

