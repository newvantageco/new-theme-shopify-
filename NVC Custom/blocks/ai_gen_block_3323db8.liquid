{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-value-hero-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-value-hero-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-value-hero-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: {{ block.settings.headline_weight }};
    color: {{ block.settings.headline_color }};
    text-align: {{ block.settings.text_alignment }};
    margin: 0 0 {{ block.settings.headline_spacing }}px;
    line-height: 1.2;
  }

  .ai-value-hero-subheadline-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheadline_size }}px;
    color: {{ block.settings.text_color }};
    text-align: {{ block.settings.text_alignment }};
    margin: 0 0 {{ block.settings.subheadline_spacing }}px;
    line-height: 1.6;
    max-width: 900px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .ai-value-hero-price-box-{{ ai_gen_id }} {
    background-color: {{ block.settings.price_box_bg }};
    border: 2px solid {{ block.settings.price_box_border }};
    border-radius: {{ block.settings.price_box_radius }}px;
    padding: {{ block.settings.price_box_padding }}px;
    text-align: center;
    margin: {{ block.settings.price_box_spacing }}px 0;
    max-width: 600px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .ai-value-hero-price-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_title_size }}px;
    font-weight: 700;
    color: {{ block.settings.headline_color }};
    margin: 0 0 8px;
  }

  .ai-value-hero-price-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_subtitle_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-value-hero-features-{{ ai_gen_id }} {
    margin: {{ block.settings.features_spacing }}px 0;
  }

  .ai-value-hero-features-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.features_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.headline_color }};
    margin: 0 0 {{ block.settings.features_title_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-value-hero-features-list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
  }

  .ai-value-hero-feature-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .ai-value-hero-feature-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    color: {{ block.settings.accent_color }};
    margin-top: 2px;
  }

  .ai-value-hero-feature-content-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-value-hero-feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_item_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.headline_color }};
    margin: 0 0 4px;
  }

  .ai-value-hero-feature-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_item_text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-value-hero-comparison-{{ ai_gen_id }} {
    margin: {{ block.settings.comparison_spacing }}px 0;
  }

  .ai-value-hero-comparison-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.comparison_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.headline_color }};
    margin: 0 0 {{ block.settings.comparison_title_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-value-hero-table-wrapper-{{ ai_gen_id }} {
    overflow-x: auto;
    margin: 0 0 {{ block.settings.table_spacing }}px;
  }

  .ai-value-hero-table-{{ ai_gen_id }} {
    width: 100%;
    border-collapse: collapse;
    background-color: {{ block.settings.table_bg }};
    border-radius: {{ block.settings.table_radius }}px;
    overflow: hidden;
  }

  .ai-value-hero-table-{{ ai_gen_id }} thead {
    background-color: {{ block.settings.table_header_bg }};
  }

  .ai-value-hero-table-{{ ai_gen_id }} th {
    padding: {{ block.settings.table_cell_padding }}px;
    text-align: left;
    font-size: {{ block.settings.table_header_size }}px;
    font-weight: 700;
    color: {{ block.settings.table_header_color }};
    border-bottom: 2px solid {{ block.settings.table_border_color }};
  }

  .ai-value-hero-table-{{ ai_gen_id }} td {
    padding: {{ block.settings.table_cell_padding }}px;
    font-size: {{ block.settings.table_text_size }}px;
    color: {{ block.settings.text_color }};
    border-bottom: 1px solid {{ block.settings.table_border_color }};
    vertical-align: top;
  }

  .ai-value-hero-table-{{ ai_gen_id }} tbody tr:last-child td {
    border-bottom: none;
  }

  .ai-value-hero-table-{{ ai_gen_id }} tbody tr:hover {
    background-color: {{ block.settings.table_row_hover }};
  }

  .ai-value-hero-collections-{{ ai_gen_id }} {
    margin: {{ block.settings.collections_spacing }}px 0;
  }

  .ai-value-hero-collections-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.collections_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.headline_color }};
    margin: 0 0 {{ block.settings.collections_title_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-value-hero-collections-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.collections_gap }}px;
  }

  .ai-value-hero-collection-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.collection_card_radius }}px;
    background-color: {{ block.settings.collection_card_bg }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-value-hero-collection-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .ai-value-hero-collection-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.collection_image_ratio }}%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-value-hero-collection-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-value-hero-collection-card-{{ ai_gen_id }}:hover .ai-value-hero-collection-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-value-hero-collection-content-{{ ai_gen_id }} {
    padding: {{ block.settings.collection_card_padding }}px;
    text-align: center;
  }

  .ai-value-hero-collection-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.collection_name_size }}px;
    font-weight: 600;
    color: {{ block.settings.headline_color }};
    margin: 0 0 8px;
  }

  .ai-value-hero-collection-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.collection_description_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.collection_button_spacing }}px;
    line-height: 1.5;
  }

  .ai-value-hero-collection-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.collection_btn_bg }};
    color: {{ block.settings.collection_btn_text }};
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ block.settings.collection_btn_radius }}px;
    transition: all 0.3s ease;
  }

  .ai-value-hero-collection-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.collection_btn_hover_bg }};
    color: {{ block.settings.collection_btn_hover_text }};
  }

  .ai-value-hero-collection-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: {{ block.settings.text_color }};
    font-style: italic;
  }

  .ai-value-hero-closing-{{ ai_gen_id }} {
    margin: {{ block.settings.closing_spacing }}px 0 0;
  }

  .ai-value-hero-closing-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.closing_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.headline_color }};
    margin: 0 0 {{ block.settings.closing_title_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-value-hero-closing-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.closing_text_size }}px;
    color: {{ block.settings.text_color }};
    text-align: {{ block.settings.text_alignment }};
    margin: 0 0 {{ block.settings.closing_text_spacing }}px;
    line-height: 1.6;
    max-width: 800px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .ai-value-hero-cta-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin: {{ block.settings.cta_spacing }}px 0 0;
  }

  .ai-value-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg }};
    color: {{ block.settings.button_text_color }};
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_bg }};
  }

  .ai-value-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_bg }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-value-hero-headline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.headline_size }}px * 0.7);
    }

    .ai-value-hero-subheadline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheadline_size }}px * 0.9);
    }

    .ai-value-hero-price-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.price_title_size }}px * 0.85);
    }

    .ai-value-hero-comparison-title-{{ ai_gen_id }},
    .ai-value-hero-features-title-{{ ai_gen_id }},
    .ai-value-hero-collections-title-{{ ai_gen_id }},
    .ai-value-hero-closing-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.comparison_title_size }}px * 0.85);
    }

    .ai-value-hero-table-{{ ai_gen_id }} th,
    .ai-value-hero-table-{{ ai_gen_id }} td {
      padding: 12px;
      font-size: 14px;
    }

    .ai-value-hero-features-list-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-value-hero-collections-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

