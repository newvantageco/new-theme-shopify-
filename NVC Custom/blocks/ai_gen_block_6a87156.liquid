<frame-shape-selector-{{ ai_gen_id }}
  class="ai-frame-shape-selector-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-frame-shape-container-{{ ai_gen_id }}">
    <div class="ai-frame-shape-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-frame-shape-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      
      {% if block.settings.subtitle != blank %}
        <div class="ai-frame-shape-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
      {% endif %}
    </div>

    <div class="ai-frame-shape-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign image_key = 'shape_image_' | append: i
          assign label_key = 'shape_label_' | append: i
          assign link_key = 'shape_link_' | append: i
          
          assign shape_image = block.settings[image_key]
          assign shape_label = block.settings[label_key]
          assign shape_link = block.settings[link_key]
        %}

        {% if shape_label != blank %}
          <a
            href="{{ shape_link | default: '#' }}"
            class="ai-frame-shape-card-{{ ai_gen_id }}"
            aria-label="Shop {{ shape_label }} frames"
          >
            <div class="ai-frame-shape-image-wrapper-{{ ai_gen_id }}">
              {% if shape_image %}
                <img
                  src="{{ shape_image | image_url: width: 800 }}"
                  alt="{{ shape_label }} frame shape"
                  class="ai-frame-shape-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ shape_image.width }}"
                  height="{{ shape_image.height }}"
                >
              {% else %}
                <div class="ai-frame-shape-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
              
              <div class="ai-frame-shape-label-{{ ai_gen_id }}">
                <p class="ai-frame-shape-label-text-{{ ai_gen_id }}">{{ shape_label }}</p>
              </div>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</frame-shape-selector-{{ ai_gen_id }}>

<script>
  (function() {
    class FrameShapeSelector{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.cards = this.querySelectorAll('.ai-frame-shape-card-{{ ai_gen_id }}');
        this.setupEventListeners();
        this.setupTouchOptimization();
      }

      setupEventListeners() {
        this.cards.forEach((card) => {
          card.addEventListener('click', (e) => {
            const href = card.getAttribute('href');
            if (href && href !== '#') {
              window.location.href = href;
            }
          });

          card.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              card.click();
            }
          });
        });
      }

      setupTouchOptimization() {
        if ('ontouchstart' in window) {
          this.cards.forEach((card) => {
            card.addEventListener('touchstart', () => {
              card.style.transform = 'translateY(-3px)';
            }, { passive: true });

            card.addEventListener('touchend', () => {
              setTimeout(() => {
                card.style.transform = '';
              }, 150);
            }, { passive: true });
          });
        }
      }
    }

    customElements.define('frame-shape-selector-{{ ai_gen_id }}', FrameShapeSelector{{ ai_gen_id }});
  })();
</script>

