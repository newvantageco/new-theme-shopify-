{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-frame-shape-selector-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-frame-shape-container-{{ ai_gen_id }} {
    max-width: {{ settings.container }}px;
    margin: 0 auto;
    padding: 0 {{ settings.gutter | divided_by: 2 }}px;
  }

  .ai-frame-shape-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-frame-shape-title-{{ ai_gen_id }} {
    font-family: var(--g-font-1);
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_margin }}px;
    line-height: 1.2;
    text-transform: {{ block.settings.title_transform }};
    letter-spacing: {{ block.settings.title_spacing }}px;
  }

  .ai-frame-shape-subtitle-{{ ai_gen_id }} {
    font-family: var(--g-font-2);
    font-size: {{ block.settings.subtitle_size }}px;
    font-weight: {{ block.settings.subtitle_weight }};
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.6;
  }

  .ai-frame-shape-subtitle-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  .ai-frame-shape-subtitle-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-frame-shape-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.grid_margin_top }}px;
  }

  .ai-frame-shape-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    background-color: {{ block.settings.card_background }};
    border-radius: 0;
    transition: transform {{ block.settings.hover_duration | divided_by: 10.0 }}s ease, box-shadow {{ block.settings.hover_duration | divided_by: 10.0 }}s ease;
    cursor: pointer;
  }

  .ai-frame-shape-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.shadow_blur }}px {{ block.settings.shadow_spread }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 10.0 }});
  }

  .ai-frame-shape-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-frame-shape-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform {{ block.settings.hover_duration | divided_by: 10.0 }}s ease;
  }

  .ai-frame-shape-card-{{ ai_gen_id }}:hover .ai-frame-shape-image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.image_scale | divided_by: 10.0 }});
  }

  .ai-frame-shape-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 14px;
  }

  .ai-frame-shape-placeholder-{{ ai_gen_id }} svg {
    width: 40%;
    height: 40%;
    opacity: 0.3;
  }

  .ai-frame-shape-label-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, {{ block.settings.label_opacity | divided_by: 10.0 }});
    padding: {{ block.settings.label_padding }}px;
    text-align: center;
  }

  .ai-frame-shape-label-text-{{ ai_gen_id }} {
    font-family: var(--g-font-1);
    font-size: {{ block.settings.label_size }}px;
    font-weight: {{ block.settings.label_weight }};
    color: {{ block.settings.label_color }};
    text-transform: uppercase;
    letter-spacing: {{ block.settings.label_spacing | divided_by: 2.0 }}px;
    margin: 0;
    line-height: 1;
  }

