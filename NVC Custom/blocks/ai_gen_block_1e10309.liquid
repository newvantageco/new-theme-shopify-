{% doc %}
  @prompt
    A magazine-style editorial layout, make this for displaying products 4 product
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-products-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-editorial-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-editorial-products-hero-{{ ai_gen_id }} {
    grid-column: 1 / 7;
    position: relative;
    overflow: hidden;
    min-height: 600px;
    display: flex;
    flex-direction: column;
  }

  .ai-editorial-products-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    flex: 1;
  }

  .ai-editorial-products-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 600px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
  }

  .ai-editorial-products-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-editorial-products-hero-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 30px;
    right: 30px;
    color: {{ block.settings.hero_text_color }};
    z-index: 2;
  }

  .ai-editorial-products-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to top, rgba(0,0,0,{{ block.settings.overlay_opacity }}), transparent);
    z-index: 1;
  }

  .ai-editorial-products-hero-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_title_size }}px;
    font-weight: 600;
    margin: 0 0 12px;
    line-height: 1.2;
  }

  .ai-editorial-products-hero-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_price_size }}px;
    margin: 0;
    font-weight: 500;
  }

  .ai-editorial-products-side-{{ ai_gen_id }} {
    grid-column: 7 / 13;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-editorial-products-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }

  .ai-editorial-products-item-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 3 / 4;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .ai-editorial-products-item-{{ ai_gen_id }}:hover .ai-editorial-products-item-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-editorial-products-item-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 3 / 4;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-products-item-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-editorial-products-item-content-{{ ai_gen_id }} {
    padding: 16px 0;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-editorial-products-item-vendor-{{ ai_gen_id }} {
    font-size: {{ block.settings.vendor_size }}px;
    color: {{ block.settings.category_color }};
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
    margin: 0;
  }

  .ai-editorial-products-item-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 500;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-editorial-products-item-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
    margin: 0;
  }

  .ai-editorial-products-item-link-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .ai-editorial-products-empty-{{ ai_gen_id }} {
    padding: 40px;
    text-align: center;
    color: #999;
    font-style: italic;
    font-size: 14px;
  }

  @media screen and (max-width: 768px) {
    .ai-editorial-products-hero-{{ ai_gen_id }} {
      grid-column: 1 / 13;
      min-height: 500px;
    }

    .ai-editorial-products-hero-placeholder-{{ ai_gen_id }} {
      min-height: 500px;
    }

    .ai-editorial-products-hero-content-{{ ai_gen_id }} {
      bottom: 20px;
      left: 20px;
      right: 20px;
    }

    .ai-editorial-products-hero-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_title_size | times: 0.7 }}px;
    }

    .ai-editorial-products-side-{{ ai_gen_id }} {
      grid-column: 1 / 13;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-editorial-products-side-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-editorial-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-editorial-products-grid-{{ ai_gen_id }}">
    <div class="ai-editorial-products-hero-{{ ai_gen_id }}">
      {% assign hero_product = block.settings.product_1 %}
      {% if hero_product != blank %}
        {% if hero_product.featured_image %}
          <img
            src="{{ hero_product.featured_image | image_url: width: 800 }}"
            alt="{{ hero_product.featured_image.alt | default: hero_product.title | escape }}"
            class="ai-editorial-products-hero-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ hero_product.featured_image.width }}"
            height="{{ hero_product.featured_image.height }}"
          >
        {% else %}
          <div class="ai-editorial-products-hero-placeholder-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
        <div class="ai-editorial-products-hero-overlay-{{ ai_gen_id }}"></div>
        <div class="ai-editorial-products-hero-content-{{ ai_gen_id }}">
          <h2 class="ai-editorial-products-hero-title-{{ ai_gen_id }}">{{ hero_product.title }}</h2>
          <p class="ai-editorial-products-hero-price-{{ ai_gen_id }}">{{ hero_product.price | money }}</p>
        </div>
        <a href="{{ hero_product.url }}" class="ai-editorial-products-item-link-{{ ai_gen_id }}" aria-label="{{ hero_product.title | escape }}"></a>
      {% else %}
        <div class="ai-editorial-products-hero-placeholder-{{ ai_gen_id }}">
          {{ 'product-apparel-1' | placeholder_svg_tag }}
        </div>
        <div class="ai-editorial-products-hero-overlay-{{ ai_gen_id }}"></div>
        <div class="ai-editorial-products-hero-content-{{ ai_gen_id }}">
          <h2 class="ai-editorial-products-hero-title-{{ ai_gen_id }}">Featured Product</h2>
          <p class="ai-editorial-products-hero-price-{{ ai_gen_id }}">£0.00</p>
        </div>
      {% endif %}
    </div>

    <div class="ai-editorial-products-side-{{ ai_gen_id }}">
      {% for i in (2..4) %}
        {% assign product_key = 'product_' | append: i %}
        {% assign product = block.settings[product_key] %}
        
        <div class="ai-editorial-products-item-{{ ai_gen_id }}">
          {% if product != blank %}
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 500 }}"
                alt="{{ product.featured_image.alt | default: product.title | escape }}"
                class="ai-editorial-products-item-image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ product.featured_image.width }}"
                height="{{ product.featured_image.height }}"
              >
            {% else %}
              <div class="ai-editorial-products-item-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
            <div class="ai-editorial-products-item-content-{{ ai_gen_id }}">
              {% if block.settings.show_vendor and product.vendor != blank %}
                <p class="ai-editorial-products-item-vendor-{{ ai_gen_id }}">{{ product.vendor }}</p>
              {% endif %}
              <h3 class="ai-editorial-products-item-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              <p class="ai-editorial-products-item-price-{{ ai_gen_id }}">{{ product.price | money }}</p>
            </div>
            <a href="{{ product.url }}" class="ai-editorial-products-item-link-{{ ai_gen_id }}" aria-label="{{ product.title | escape }}"></a>
          {% else %}
            <div class="ai-editorial-products-item-placeholder-{{ ai_gen_id }}">
              {{ 'product-apparel-1' | placeholder_svg_tag }}
            </div>
            <div class="ai-editorial-products-item-content-{{ ai_gen_id }}">
              <p class="ai-editorial-products-item-vendor-{{ ai_gen_id }}">Brand</p>
              <h3 class="ai-editorial-products-item-title-{{ ai_gen_id }}">Product Title</h3>
              <p class="ai-editorial-products-item-price-{{ ai_gen_id }}">£0.00</p>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Magazine product layout",
  "settings": [
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Featured product"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Product 2"
    },
    {
      "type": "product",
      "id": "product_3",
      "label": "Product 3"
    },
    {
      "type": "product",
      "id": "product_4",
      "label": "Product 4"
    },
    {
      "type": "header",
      "content": "Display options"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": true
    },
    {
      "type": "header",
      "content": "Featured product style"
    },
    {
      "type": "range",
      "id": "hero_title_size",
      "min": 24,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 36
    },
    {
      "type": "range",
      "id": "hero_price_size",
      "min": 16,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Price size",
      "default": 24
    },
    {
      "type": "color",
      "id": "hero_text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Image overlay opacity",
      "default": 0.3
    },
    {
      "type": "header",
      "content": "Product card style"
    },
    {
      "type": "range",
      "id": "vendor_size",
      "min": 10,
      "max": 16,
      "step": 1,
      "unit": "px",
      "label": "Vendor size",
      "default": 12
    },
    {
      "type": "range",
      "id": "product_title_size",
      "min": 14,
      "max": 28,
      "step": 1,
      "unit": "px",
      "label": "Title size",
      "default": 18
    },
    {
      "type": "range",
      "id": "product_price_size",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Price size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 10,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Grid gap",
      "default": 30
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "category_color",
      "label": "Vendor accent",
      "default": "#a76111"
    }
  ],
  "presets": [
    {
      "name": "Magazine product layout"
    }
  ]
}
{% endschema %}
