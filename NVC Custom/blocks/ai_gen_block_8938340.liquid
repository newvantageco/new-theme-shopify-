{% doc %}
  @prompt
    Create a clean two-column layout. 
    On the left, show an image of a sunglasses case and lens cloth. 
    On the right, include the heading:
    "Plus a frame case and lens cloth" 
    and below it a paragraph:
    "A frame this special deserves a comfy home to keep it safe and clean."
    
    The layout should be balanced, with the image taking about 40% of the width and text 60%. 
    Use modern spacing, soft shadows, and align everything vertically centered.
    Make it look like Warby Parkerâ€™s minimalist product info blocks.
    .section--image-with-text {
      display: flex;
      align-items: center;
      gap: 3rem;
      padding: 4rem 0;
    }
    
    .section--image-with-text img {
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.06);
      max-width: 500px;
    }
    
    .section--image-with-text .content {
      max-width: 600px;
    }
    
    .section--image-with-text h2 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    
    .section--image-with-text p {
      color: #333;
      font-size: 1.1rem;
      line-height: 1.6;
    }
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-layout-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-image-text-layout-{{ ai_gen_id }}--reverse {
    flex-direction: row-reverse;
  }

  .ai-image-column-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    max-width: {{ block.settings.image_width }}%;
  }

  .ai-text-column-{{ ai_gen_id }} {
    flex: 1;
    max-width: calc(100% - {{ block.settings.image_width }}%);
  }

  .ai-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: auto;
  }

  .ai-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: {{ block.settings.image_shadow_x }}px {{ block.settings.image_shadow_y }}px {{ block.settings.image_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.image_shadow_opacity }});
    transition: transform 0.3s ease;
  }

  .ai-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: {{ block.settings.image_shadow_x }}px {{ block.settings.image_shadow_y }}px {{ block.settings.image_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.image_shadow_opacity }});
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 300px;
    position: relative;
  }

  .ai-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-text-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
  }

  .ai-text-content-{{ ai_gen_id }} h2 {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_margin }}px 0;
    line-height: 1.3;
    text-transform: {{ block.settings.heading_transform }};
  }

  .ai-text-content-{{ ai_gen_id }} p {
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.text_line_height }};
    margin: 0;
    color: {{ block.settings.text_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-image-text-layout-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_gap }}px;
      text-align: center;
    }

    .ai-image-text-layout-{{ ai_gen_id }}--reverse {
      flex-direction: column;
    }

    .ai-image-column-{{ ai_gen_id }},
    .ai-text-column-{{ ai_gen_id }} {
      flex: none;
      max-width: 100%;
    }

    .ai-text-content-{{ ai_gen_id }} h2 {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-text-content-{{ ai_gen_id }} p {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-image-text-layout-{{ ai_gen_id }} {% if block.settings.layout_reverse %}ai-image-text-layout-{{ ai_gen_id }}--reverse{% endif %}"
  {{ block.shopify_attributes }}
>
  <div class="ai-image-column-{{ ai_gen_id }}">
    <div class="ai-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 800 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-apparel-1' | placeholder_svg_tag }}
          <div class="ai-empty-state-{{ ai_gen_id }}">
            Add an image of sunglasses case and lens cloth
          </div>
        </div>
      {% endif %}
    </div>
  </div>

  <div class="ai-text-column-{{ ai_gen_id }}">
    <div class="ai-text-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2>{{ block.settings.heading }}</h2>
      {% endif %}
      
      {% if block.settings.text != blank %}
        <p>{{ block.settings.text }}</p>
      {% endif %}
    </div>
  </div>
</div>

