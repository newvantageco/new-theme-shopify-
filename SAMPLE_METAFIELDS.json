  "installation_instructions": {
    "shopify_admin": [
      "1. Go to Shopify Admin → Settings → Custom data → Products",
      "2. Click 'Add definition'",
      "3. For each metafield in the list above:",
      "   - Enter the namespace (optical)",
      "   - Enter the key (e.g., lens_width)",
      "   - Enter the name and description",
      "   - Select the type",
      "   - Add validations if needed",
      "   - Click 'Save'",
      "4. Repeat for all 15 metafield definitions"
    ],
    "bulk_import": [
      "1. Save this file as sample_metafields.json",
      "2. Use Shopify GraphQL Admin API or a metafields app",
      "3. Import metafield definitions first",
      "4. Then add metafield values to products"
    ],
    "manual_entry": [
      "1. Go to Products → Select a product → Metafields section",
      "2. Click 'Add metafield'",
      "3. Select the metafield definition (e.g., optical.lens_width)",
      "4. Enter the value",
      "5. Click 'Save'",
      "6. Repeat for each product"
    ]
  },
